<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xmlns:tcp="http://www.mulesource.org/schema/mule/tcp/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
               http://www.mulesource.org/schema/mule/tcp/2.0 META-INF/mule-tcp.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 META-INF/mule-vm.xsd">

    <vm:connector name="vm-queue" queueEvents="true"/>

    <!-- cannot use vm here - see endpoint connector issue -->
    <mule:endpoint name="queue" address="vm://foo"/>

    <mule:model-seda name="main">
        <mule:service name="test" implementation="org.mule.tck.functional.FunctionalTestComponent">
            <mule:inbound-router>
                <mule:endpoint address="tcp://localhost:65432"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint-ref nameref="queue"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>
    </mule:model-seda>

</beans>
