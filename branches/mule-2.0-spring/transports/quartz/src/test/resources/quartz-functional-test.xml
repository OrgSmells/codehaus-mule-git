<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:quartz="http://www.mulesource.org/schema/mule/quartz/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
               http://www.mulesource.org/schema/mule/quartz/2.0 META-INF/mule-quartz.xsd">

    <quartz:connector name="quartzConnectorDefaults"/>

    <mule:endpoint name="quartz.in.1" address="quartz:/myService1">
    	<mule:properties>
	        <prop key="repeatInterval">1000</prop>
	        <prop key="repeatCount">3</prop>
	        <prop key="payload">quartz test</prop>
    	</mule:properties>
	</mule:endpoint>    	

    <mule:endpoint name="quartz.in.2" address="quartz:/myService2">
    	<mule:properties>
	        <prop key="repeatInterval">1000</prop>
	        <prop key="repeatCount">1</prop>
    	</mule:properties>
	</mule:endpoint>    	

    <mule:model-seda name="quartz" >
    	<mule:pooling-profile maxActive="1" exhaustedAction="WAIT"/>
    	
        <mule:service name="quartzService1" implementation="org.mule.providers.quartz.TestComponent">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="quartz.in.1"/>
            </mule:inbound-router>
        </mule:service>

        <mule:service name="quartzService2" implementation="org.mule.providers.quartz.TestComponent">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="quartz.in.2"/>
            </mule:inbound-router>
        </mule:service>
    </mule:model-seda>
</beans>