<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 META-INF/mule-vm.xsd">

    <mule:configuration serverId="">
        <mule:default-threading-profile threadWaitTimeout="60000" threadTTL="60000"/>
    </mule:configuration>

   <mule:model-seda name="synchTestModel">
    
        <mule:service name="mySynchService" implementation="marcoPolo">
            <mule:inbound-router>
                <mule:endpoint address="vm://s-in" synchronous="true"/>
            </mule:inbound-router>
        </mule:service>

     </mule:model-seda>

    <bean id="marcoPolo" class="org.mule.tck.functional.FunctionalTestComponent">
    	<property name="returnMessage" value="Polo"/>
    </bean>

</beans>
        