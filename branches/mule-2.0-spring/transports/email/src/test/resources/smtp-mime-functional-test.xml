<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:smtp="http://www.mulesource.org/schema/mule/smtp/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
       http://www.mulesource.org/schema/mule/smtp/2.0 META-INF/mule-smtp.xsd">

    <!-- MULE-1770 -->
    <smtp:connector name="smtpConnector">
        <mule:service-overrides messageAdapter="org.mule.providers.email.SimpleMailMessageAdapter"/>
    </smtp:connector>

    <bean name="bridge" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="test">

        <mule:service name="relay" implementation="bridge">
            <mule:inbound-router>
                <mule:endpoint address="vm://send"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="smtp://localhost:65432"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
