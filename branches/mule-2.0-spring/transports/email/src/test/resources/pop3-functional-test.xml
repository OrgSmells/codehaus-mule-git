<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:pop3="http://www.mulesource.org/schema/mule/pop3/2.0"
       xmlns:pop3s="http://www.mulesource.org/schema/mule/pop3s/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
       http://www.mulesource.org/schema/mule/pop3/2.0 META-INF/mule-pop3.xsd
       http://www.mulesource.org/schema/mule/pop3s/2.0 META-INF/mule-pop3s.xsd">

    <pop3:connector name="pop3Connector"/>

    <bean name="bridge" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="test">

        <mule:service name="relay" implementation="bridge">
            <mule:inbound-router>
                <mule:endpoint address="pop3://bob%40example.com:password@localhost:65432">
                    <mule:retry-connection-strategy inbound="true" retryCount="5" retryFrequency="1000"/>
                </mule:endpoint>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://receive"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
