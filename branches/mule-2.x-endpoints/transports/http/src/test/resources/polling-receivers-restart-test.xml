<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
       xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd
       http://www.mulesource.org/schema/mule/http/2.0 http://www.mulesource.org/schema/mule/http/2.0/mule-http.xsd">

    <http:connector name="PollingHttpConnector">
        <service-overrides messageReceiver="org.mule.providers.http.PollingHttpMessageReceiver"/>
    </http:connector>

    <http:connector name="HttpConnector"/>

    <model name="main" class="org.mule.tck.testmodels.mule.TestSedaModel">

        <!-- singleton for easier testing only -->
        <service name="Test">
            <component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <inbound-router>
                <endpoint name="httpEndpoint" connector-ref="PollingHttpConnector"
                               address="http://localhost:60206/TestServer"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="stdio://System.out"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="TestServer">
            <component class="org.mule.components.simple.StaticComponent">
                <properties>
                    <spring:entry key="data" value="Here's your content."/>
                </properties>
            </component>
            <inbound-router>
                <endpoint address="http://localhost:60206" connector-ref="HttpConnector"/>
            </inbound-router>
        </service>

    </model>

</mule>
