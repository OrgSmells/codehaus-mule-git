<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:mxml="http://www.mulesource.org/schema/mule/xml/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/xml/2.0 http://www.mulesource.org/schema/mule/xml/2.0/mule-xml.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <vm:connector name="default"/>
    <vm:connector name="queue" queueEvents="true"/>

    <mxml:object-to-xml name="objectToXml"/>
    <mxml:xml-to-object name="xmlToObject"/>

    <endpoint name="xml-in" address="vm://xml-in" connector-ref="default"/>
    <endpoint name="object-in" address="vm://object-in" connector-ref="default"/>

    <model name="mule-2136">

        <service name="xml to ...">
            <component class="org.mule.components.simple.BridgeComponent"/>
            <inbound-router>
                <endpoint ref="xml-in"/>
            </inbound-router>
            <outbound-router>
                <multicasting-router>
                    <endpoint name="xml-object-out" address="vm://xml-object-out" connector-ref="queue" transformers="xmlToObject"/>
                </multicasting-router>
            </outbound-router>
        </service>

        <service name="object to xml">
            <component class="org.mule.components.simple.BridgeComponent"/>
            <inbound-router>
                <endpoint ref="object-in"/>
            </inbound-router>
            <outbound-router>
                <multicasting-router>
                    <endpoint name="object-out" address="vm://object-out" connector-ref="queue"/>
                    <endpoint name="object-xml-out" address="vm://object-xml-out" connector-ref="queue" transformers="objectToXml"/>
                    <endpoint ref="xml-in" transformers="objectToXml"/>
                </multicasting-router>
            </outbound-router>
        </service>

    </model>

</mule>
