<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <custom-transformer name="appendString"
                             class="org.mule.tck.functional.StringAppendTestTransformer"/>

    <model name="testSimple">
        <service name="testServiceSimple">
            <component class="org.mule.tck.functional.FunctionalTestComponent" />
            <inbound-router>
                <endpoint address="vm://simple" transformers="appendString"/>
            </inbound-router>
        </service>
    </model>

    <model name="testChained">
        <service name="testServiceChained">
            <component class="org.mule.components.simple.BridgeComponent" />
            <inbound-router>
                <endpoint address="vm://chained"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="vm://out" synchronous="true"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>
        <service name="testServiceChainedB">
            <component class="org.mule.tck.functional.FunctionalTestComponent" />
            <inbound-router>
                <endpoint address="vm://out" transformers="appendString"/>
            </inbound-router>
        </service>
    </model>
</mule>
