<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:imap="http://www.mulesource.org/schema/mule/imap/2.0"
       xmlns:imaps="http://www.mulesource.org/schema/mule/imaps/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/imap/2.0 http://www.mulesource.org/schema/mule/imap/2.0/mule-imap.xsd
       http://www.mulesource.org/schema/mule/imaps/2.0 http://www.mulesource.org/schema/mule/imaps/2.0/mule-imaps.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <imaps:connector name="imapsConnector">
        <imaps:tls-client clientKeyStore="clientKeystore" clientKeyStorePassword="mulepassword"/>
        <imaps:tls-trust-store trustStore="greenmail-truststore" trustStorePassword="password"/>
    </imaps:connector>
    <vm:connector name="vmConnector" queueEvents="true"/>

    <model name="test">

        <service name="relay">
            <inbound-router>
                <imaps:inbound-endpoint user="bob" password="password" host="localhost" port="65444">
                    <retry-connection-strategy retryCount="3" retryFrequency="1000"/>
                </imaps:inbound-endpoint>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <vm:outbound-endpoint path="receive"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

    </model>

</mule>
