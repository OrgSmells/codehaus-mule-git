<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="Outbound_retry" version="1.0">
    <mule-environment-properties serverUrl="" />

    <global-endpoints>
        <endpoint address="http://localhost:34567" name="dispatchEndpoint">
            <retry-policy factory="org.mule.impl.retry.policies.SimpleRetryPolicyFactory">
                <properties>
                    <property name="retryCount" value="1"/>
                    <property name="frequency" value="1000"/>
                </properties>
            </retry-policy>
        </endpoint>

        <endpoint address="http://localhost:34567" name="receiveEndpoint" type="receiver"/>
    </global-endpoints>

    <model name="main">
        <!-- we'll add the component at runtime -->
    </model>

</mule-configuration>
