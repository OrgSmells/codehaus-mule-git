<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <model name="main">
        <service name="orange1">
            <component class="org.mule.tck.testmodels.fruit.Orange"/>
        </service>

        <service name="orange2">
            <component>
                <pooled-object class="org.mule.tck.testmodels.fruit.Orange">
                    <property key="brand" value="Florida Sunny"/>
                    <property key="segments" value="8"/>
                    <property key="radius" value="15"/>
                </pooled-object>
            </component>
        </service>

        <service name="orange3">
            <component>
                <singleton-object instance-ref="myOnlyOrange"/>
            </component>
        </service>

        <service name="orange4">
            <component>
                <spring-factory-bean ref="&amp;myCustomFactory"/>
            </component>
        </service>
    </model>

    <!-- Singleton instance -->
    <spring:bean name="myOnlyOrange" class="org.mule.tck.testmodels.fruit.Orange"/>

    <!-- Spring FactoryBean -->
    <spring:bean id="myCustomFactory" class="org.mule.tck.testmodels.fruit.FloridaSunnyOrangeFactory">
        <spring:property name="segments" value="8"/>
        <spring:property name="radius" value="15"/>
    </spring:bean>
</mule>
