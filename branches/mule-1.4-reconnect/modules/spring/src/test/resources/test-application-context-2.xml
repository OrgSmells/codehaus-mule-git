<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="fruitBowl2" class="org.mule.tck.testmodels.fruit.FruitBowl">
        <property name="fruit">
            <list>
                <ref local="apple2"/>
                <ref local="banana2"/>
            </list>
        </property>
