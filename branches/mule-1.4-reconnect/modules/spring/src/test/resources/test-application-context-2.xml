    <bean id="string2" class="java.lang.String" />

    <bean id="apple2" class="org.mule.tck.testmodels.fruit.Apple" />

    <bean id="banana2" class="org.mule.tck.testmodels.fruit.Banana" />

    <bean id="orange2" class="org.mule.tck.testmodels.fruit.Orange" />
</beans>