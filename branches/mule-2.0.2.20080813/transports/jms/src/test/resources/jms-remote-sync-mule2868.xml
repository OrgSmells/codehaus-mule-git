<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:spring="http://www.springframework.org/schema/beans" xmlns:jms="http://www.mulesource.org/schema/mule/jms/2.0"
    xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/jms/2.0 http://www.mulesource.org/schema/mule/jms/2.0/mule-jms.xsd
              http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <!-- Testing with ActiveMq -->
    <jms:activemq-connector name="jmsConnector" />

    <vm:connector name="vmConnector" queueEvents="true" />

    <model name="Model">

        <service name="JmsQueueComponent">
            <inbound>
                <inbound-endpoint address="vm://in"  remoteSync="true"/>
            </inbound>
            <bridge-component />
            <outbound>
                <outbound-pass-through-router>
                    <outbound-endpoint address="jms://echo.in" />
                </outbound-pass-through-router>
            </outbound>
        </service>

        <service name="EchoComponent">
            <inbound>
                <inbound-endpoint address="jms://echo.in" />
            </inbound>
            <echo-component />
        </service>

    </model>
</mule>