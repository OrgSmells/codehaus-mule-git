<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:management="http://www.mulesource.org/schema/mule/management"
      xmlns:cometd="http://www.mulesource.org/schema/mule/cometd"
      xmlns:json="http://www.mulesource.org/schema/mule/json"
      xsi:schemaLocation="
       http://www.mulesource.org/schema/mule/json http://www.mulesource.org/schema/mule/json/3.0/mule-json.xsd
       http://www.mulesource.org/schema/mule/cometd http://www.mulesource.org/schema/mule/cometd/3.0/mule-cometd.xsd
       http://www.mulesource.org/schema/mule/management http://www.mulesource.org/schema/mule/management/3.0/mule-management.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd">

    <notifications dynamic="true">
        <notification event="COMPONENT-MESSAGE"/>
    </notifications>

    <json:object-to-json-transformer name="ObjectToJson"/>
    <json:json-to-object-transformer name="JsonToObject"/>

    <management:publish-notifications ignoreConnectionNotifications="true">
        <cometd:servlet-outbound-endpoint path="/mule/notifications" transformer-refs="ObjectToJson" cacheMessages="true">
            <or-filter>
                <payload-type-filter expectedType="org.mule.example.notifications.HeartbeatNotification"/>
                <payload-type-filter expectedType="org.mule.context.notification.SecurityNotification"/>
                <payload-type-filter expectedType="org.mule.context.notification.ComponentMessageNotification"/>
            </or-filter>
        </cometd:servlet-outbound-endpoint>
    </management:publish-notifications>

    <custom-agent class="org.mule.example.notifications.HeartbeatAgent" name="heartbeat"/>

    <model>
        <service name="TestEchoService">
            <inbound>
                <cometd:servlet-inbound-endpoint path="/services/test" synchronous="true">
                    <custom-security-filter class="org.mule.example.notifications.DummySecurityFilter"/>
                </cometd:servlet-inbound-endpoint>
            </inbound>
            <echo-component/>
        </service>
    </model>
</mule>