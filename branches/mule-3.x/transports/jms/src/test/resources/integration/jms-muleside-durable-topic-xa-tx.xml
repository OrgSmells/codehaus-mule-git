<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:mule="http://www.mulesource.org/schema/mule/core"
      xmlns:jms="http://www.mulesource.org/schema/mule/jms"
      xmlns:jbossts="http://www.mulesource.org/schema/mule/jbossts"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm"
      xmlns:test="http://www.mulesource.org/schema/mule/test"
      xsi:schemaLocation="
       http://www.mulesource.org/schema/mule/test http://www.mulesource.org/schema/mule/test/3.0/mule-test.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/jms http://www.mulesource.org/schema/mule/jms/3.0/mule-jms.xsd
       http://www.mulesource.org/schema/mule/vm http://www.mulesource.org/schema/mule/vm/3.0/mule-vm.xsd
       http://www.mulesource.org/schema/mule/jbossts http://www.mulesource.org/schema/mule/jbossts/3.0/mule-jbossts.xsd">

    <jbossts:transaction-manager/>

    <vm:connector name="vm" queueEvents="true"/>

    <vm:endpoint name="in" path="in" connector-ref="vm"/>
    <vm:endpoint name="out" path="out" connector-ref="vm"/>

    <endpoint name="broadcast" address="${broadcast.topic.destination}" connector-ref="jmsConnectorTestDriver"/>
    <endpoint name="broadcast1" address="${broadcast.topic.destination}" connector-ref="jmsConnectorC1"/>
    <endpoint name="broadcast2" address="${broadcast.topic.destination}" connector-ref="jmsConnectorC2"/>

    <model name="TEST">
        <service name="InputPart">
            <inbound>
                <inbound-endpoint ref="in"/>
            </inbound>
            <test:component>
                <test:return-data>OUTPUT MESSAGE</test:return-data>
            </test:component>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint ref="broadcast">
                        <xa-transaction action="BEGIN_OR_JOIN"/> 
                    </outbound-endpoint>
                    <!--
                        There's no inbound TX, so make sure XA is happy by starting it via router
                        on the outbound. Such problems are now nicely detected and reported via an error.
                    -->
                    <xa-transaction action="BEGIN_OR_JOIN"/>
                </pass-through-router>
            </outbound>
        </service>

        <service name="Part1">
            <inbound>
                <inbound-endpoint ref="broadcast1">
                    <xa-transaction action="BEGIN_OR_JOIN"/>
                </inbound-endpoint>
            </inbound>
            <test:component>
                <test:return-data>OUTPUT MESSAGE</test:return-data>
            </test:component>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint ref="out">
                        <xa-transaction action="NONE"/>
                    </outbound-endpoint>
                </pass-through-router>
            </outbound>
        </service>

        <service name="Part3">
            <inbound>
                <inbound-endpoint ref="broadcast2">
                    <xa-transaction action="BEGIN_OR_JOIN"/>
                </inbound-endpoint>
            </inbound>
            <test:component>
                <test:return-data>OUTPUT MESSAGE</test:return-data>
            </test:component>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint ref="out">
                        <xa-transaction action="NONE"/>
                    </outbound-endpoint>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>
