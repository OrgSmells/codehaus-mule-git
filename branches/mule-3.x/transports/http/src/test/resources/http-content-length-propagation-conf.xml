<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:mxml="http://www.mulesource.org/schema/mule/xml"
       xmlns:http="http://www.mulesource.org/schema/mule/http"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/xml http://www.mulesource.org/schema/mule/xml/3.0/mule-xml.xsd
       http://www.mulesource.org/schema/mule/http http://www.mulesource.org/schema/mule/http/3.0/mule-http.xsd">

    <mxml:xslt-transformer name="Xslt" xsl-file="stylesheet.xsl"/>

    <model name="PSMaxIntegration">
        
        <service name="PSMaxMsg1">
            <inbound>
                <http:inbound-endpoint name="httpEndpoint" host="localhost" port="8085"
                                       transformer-refs="Xslt" contentType="text/xml"/>
                <forwarding-router/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <http:outbound-endpoint host="localhost" port="8087"/>
                </pass-through-router>
            </outbound>
        </service>

        <service name="PSMaxMsg2">
            <inbound>
                <inbound-endpoint address="http://localhost:8087"/>
                <forwarding-router/>
            </inbound>
        </service>

    </model>

</mule>
