<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:spring="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.mulesource.org/schema/mule/core"
    xmlns:cxf="http://www.mulesource.org/schema/mule/cxf"
    xmlns:cxf-core="http://cxf.apache.org/core" xmlns:mule-xml="http://www.mulesource.org/schema/mule/xml"
    xmlns:vm="http://www.mulesource.org/schema/mule/vm"
    xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
               http://www.mulesource.org/schema/mule/cxf http://www.mulesource.org/schema/mule/cxf/3.0/mule-cxf.xsd
               http://www.mulesource.org/schema/mule/xml http://www.mulesource.org/schema/mule/xml/3.0/mule-xml.xsd
               http://www.mulesource.org/schema/mule/vm http://www.mulesource.org/schema/mule/vm/3.0/mule-vm.xsd
               http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

    <model name="BridgeTest">

        <service name="routeBasedOnSoapAction">
            <inbound>
                <cxf:inbound-endpoint address="http://localhost:63443/service"
                    proxy="true" synchronous="true" />
            </inbound>
            <outbound>
                <filtering-router>
                    <cxf:outbound-endpoint
                        address="http://localhost:63443/services/Echo"
                        proxy="true" synchronous="true" />
                    <message-property-filter
                        pattern="SOAPAction=http://acme.com/v2/bid" />
                </filtering-router>
                <filtering-router>
                    <cxf:outbound-endpoint
                        address="http://localhost:63443/services/Echo"
                        proxy="true" synchronous="true">
                        <transformers>
                            <mule-xml:xslt-transformer
                                xsl-file="v1-to-v2.xsl"
                                returnClass="org.mule.module.xml.transformer.DelayedResult" />
                        </transformers>
                        <response-transformers>
                            <mule-xml:xslt-transformer
                                xsl-file="v2-to-v1.xsl"
                                returnClass="org.mule.module.xml.transformer.DelayedResult" />
                        </response-transformers>
                    </cxf:outbound-endpoint>
                    <message-property-filter
                        pattern="SOAPAction=http://acme.com/v1/bid" />
                </filtering-router>
            </outbound>
        </service>
    </model>

</mule>
