<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core"
       xmlns:stdio="http://www.mulesource.org/schema/mule/stdio"
       xmlns:cxf="http://www.mulesource.org/schema/mule/cxf"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
               http://www.mulesource.org/schema/mule/stdio http://www.mulesource.org/schema/mule/stdio/3.0/mule-stdio.xsd
               http://www.mulesource.org/schema/mule/cxf http://www.mulesource.org/schema/mule/cxf/3.0/mule-cxf.xsd
               http://www.mulesource.org/schema/mule/vm http://www.mulesource.org/schema/mule/vm/3.0/mule-vm.xsd">

    <cxf:connector>
      <cxf:bus>
        <cxf:features>
           <wsa:addressing/>
           <wsp:PolicyAttachment URI=""/>
           <wss:WSSecurity .../>
           
        </cxf:features>
      </cxf:bus>
    </cxf:connector>
    
    <mule:model-seda name="BasicCxfTest">
        <mule:service name="echoService">
            <mule:inbound/>
            <mule:component class="org.mule.component.simple.EchoComponent"/>
        </mule:service>
        
        <mule:service name="echoServic2e">
            <mule:inbound>
                <mule:endpoint address="cxf:http://localhost:10082/services/Echo2"/>
            </mule:inbound>
            <mule:component class="org.mule.component.simple.EchoComponent"/>
        </mule:service>
        
        <mule:service name="echoService3">
            <mule:inbound>
                <mule:endpoint address="cxf:http://localhost:10083/services/Echo3"/>
            </mule:inbound>
            <mule:component class="org.mule.component.simple.EchoComponent"/>
        </mule:service>
        
    </mule:model-seda>

</beans>
        
