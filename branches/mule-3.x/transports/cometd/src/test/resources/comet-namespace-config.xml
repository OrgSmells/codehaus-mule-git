<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:cometd="http://www.mulesource.org/schema/mule/cometd"
      xsi:schemaLocation="
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/cometd http://www.mulesource.org/schema/mule/cometd/3.0/mule-cometd.xsd">

    <cometd:connector name="connector1" directDeliver="true" interval="1000" jsonCommented="true" logLevel="1"
                      maxInterval="10000" multiFrameInterval="3000" refsThreshold="4000" timeout="50000"/>

    <cometd:servlet-connector name="connector2"/>

    <cometd:endpoint name="endpoint1" address="http://0.0.0.0:58080/service/request"/>
    <cometd:servlet-endpoint name="endpoint2" path="service/response"/>
</mule>
