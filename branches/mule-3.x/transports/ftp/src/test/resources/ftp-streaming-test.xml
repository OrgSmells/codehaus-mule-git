<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:ftp="http://www.mulesoft.org/schema/mule/ftp"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.0/mule.xsd
               http://www.mulesoft.org/schema/mule/ftp http://www.mulesoft.org/schema/mule/ftp/3.0/mule-ftp.xsd">

    <ftp:connector name="ftp" pollingFrequency="500" streaming="true" >
        <custom-exception-strategy class="org.mule.tck.functional.QuietExceptionStrategy"/>
    </ftp:connector>

    <model name="main">
        <service name="testComponent">
            <inbound>
                <ftp:inbound-endpoint address="ftp://anonymous:password@localhost:60197"/>
            </inbound>
            <component>
                <singleton-object class="org.mule.tck.functional.FunctionalStreamingTestComponent"/>
            </component>
        </service>
    </model>
</mule>
