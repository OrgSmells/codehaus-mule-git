<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <vm:endpoint name="inbound" path="inbound"/>
    <vm:endpoint name="endpointHop1" path="hop1"/>
    <vm:endpoint name="endpointHop2" path="hop2"/>

    <model name="main">
        <service name="multicastComponent" class="org.mule.tck.testmodels.mule.TestSedaComponent">
            <inbound-router>
                <vm:inbound-endpoint ref="inbound" synchronous="true"/>
            </inbound-router>
            <pass-through-component/>
            <outbound-router>
                <multicasting-router>
                    <vm:outbound-endpoint ref="endpointHop1"/>
                    <vm:outbound-endpoint ref="endpointHop2"/>
                </multicasting-router>
            </outbound-router>
        </service>

        <service name="hop1" class="org.mule.tck.testmodels.mule.TestSedaComponent">
            <inbound-router>
                <vm:inbound-endpoint ref="endpointHop1"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.tck.functional.FunctionalTestComponent"/>
            </component>
        </service>

        <service name="hop2" class="org.mule.tck.testmodels.mule.TestSedaComponent">
            <inbound-router>
                <vm:inbound-endpoint ref="endpointHop2"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.tck.functional.FunctionalTestComponent"/>
            </component>
        </service>
    </model>

</mule>
