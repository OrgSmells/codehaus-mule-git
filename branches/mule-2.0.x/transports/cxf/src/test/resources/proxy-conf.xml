<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:cxf="http://www.mulesource.org/schema/mule/cxf/2.0"
       xmlns:cxf-core="http://cxf.apache.org/core"
       xmlns:mule-xml="http://www.mulesource.org/schema/mule/xml/2.0"
  	   xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/cxf/2.0 http://www.mulesource.org/schema/mule/cxf/2.0/mule-cxf.xsd
               http://www.mulesource.org/schema/mule/xml/2.0 http://www.mulesource.org/schema/mule/xml/2.0/mule-xml.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
               http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

  <mule-xml:xslt-transformer xsl-file="proxy.xsl" name="TestXslt" 
      returnClass="org.w3c.dom.Document"/>
  
    <model name="BridgeTest">
    
        <service name="serverEcho">
            <inbound>
                <cxf:inbound-endpoint address="http://localhost:63081/services/Echo" responseTransformer-refs="TestXslt">
                    <cxf:features>
                        <cxf-core:logging/>
                    </cxf:features>
                </cxf:inbound-endpoint>
            </inbound>
            <outbound>
                <outbound-pass-through-router>
                    <vm:outbound-endpoint path="test" />
                </outbound-pass-through-router>
            </outbound>
        </service>
        
        <service name="echoService">
            <inbound>
                <inbound-endpoint address="vm://test" />
            </inbound>
            <echo-component/>
        </service>
        
        <service name="serverClientProxy">
            <inbound>
                <cxf:inbound-endpoint address="http://localhost:63081/services/proxy"/>
            </inbound>
            <outbound>
                <outbound-pass-through-router>
                	<cxf:outbound-endpoint address="http://localhost:63081/services/Echo" proxy="true"/>
                </outbound-pass-through-router>
            </outbound>
        </service>
        
    </model>

</mule>
