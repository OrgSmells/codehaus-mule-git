<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:ssl="http://www.mulesource.org/schema/mule/ssl/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
       http://www.mulesource.org/schema/mule/ssl/2.0 META-INF/mule-ssl.xsd">


    <ssl:connector name="sslConnector" sendBufferSize="1024" receiveBufferSize="2048" keepAlive="true">
        <ssl:tls-configuration keyStore="serverKeystore" keyPassword="mulepassword" storePassword="mulepassword"
                clientKeyStore="clientKeyStore" clientKeyStorePassword="mulepassword" trustStore="trustStore"
                trustStorePassword="mulepassword" explicitTrustStoreOnly="true" requireClientAuthentication="true"/>
    </ssl:connector>

</beans>