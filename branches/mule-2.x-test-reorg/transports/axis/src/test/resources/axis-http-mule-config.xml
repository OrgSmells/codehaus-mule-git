<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:axis="http://www.mulesource.org/schema/mule/axis/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/axis/2.0 http://www.mulesource.org/schema/mule/axis/2.0/mule-axis.xsd">

    <model name="test">
        <service name="mycomponent">
            <inbound-router>
                <axis:inbound-endpoint address="http://localhost:62108/mule"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.tck.testmodels.services.TestServiceComponent"/>
            </component>
        </service>

        <service name="mycomponent2">
            <inbound-router>
                <axis:inbound-endpoint address="http://localhost:62109/mule/services">
                    <properties>
                        <spring:entry key="serviceInterfaces">
                            <spring:list>
                                <spring:value>org.mule.components.simple.EchoService</spring:value>
                                <spring:value>org.mule.tck.testmodels.services.DateService</spring:value>
                            </spring:list>
                        </spring:entry>
                    </properties>
                </axis:inbound-endpoint>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.tck.testmodels.services.TestServiceComponent"/>
            </component>
        </service>

        <service name="mycomponent3">
            <inbound-router>
                <axis:inbound-endpoint address="http://localhost:62109"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.tck.testmodels.services.TestServiceComponent"/>
            </component>
        </service>

        <service name="mycomponent4">
            <inbound-router>
                <axis:inbound-endpoint address="http://localhost:62110" synchronous="false"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.tck.testmodels.services.TestServiceComponent"/>
            </component>
        </service>
    </model>
</mule>
