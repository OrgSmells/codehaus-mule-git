    <profiles>
        <profile>
            <id>schemadocs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>org.mule.tools.schemadocs.SchemaDocsMain</mainClass>
                            <arguments>
                                <argument>schemadoc-prefix.txt</argument>
                                <argument>schemadoc-postfix.txt</argument>
                                <argument>/home/andrew/projects/mule/branches/mule-2.x/tools/schemadocs/target/normalized.xsd</argument>
                            </arguments>
                            <!-- systemProperties>
