<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
      http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <spring:bean name="bean" class="java.lang.Object"/>

    <spring:beans>
        <spring:alias name="bean" alias="poot"/>
    </spring:beans>

    <environment-properties>
        <spring:entry key="property" value="value"/>
    </environment-properties>

    <model name="model">
        <service name="service">
            <component scope="singleton" instance-ref="poot"/>
            <inbound-router>
                <endpoint name="endpoint" address="test://${property}"/>
            </inbound-router>
        </service>
    </model>

</mule>
