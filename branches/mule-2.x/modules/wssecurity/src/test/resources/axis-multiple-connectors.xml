<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
	   xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
       xmlns:axis="http://www.mulesource.org/schema/mule/axis/2.0"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
	   xmlns:wssecurity="http://www.mulesource.org/schema/mule/wssecurity/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd
	   http://www.mulesource.org/schema/mule/axis/2.0 http://www.mulesource.org/schema/mule/axis/2.0/mule-axis.xsd
	   http://www.mulesource.org/schema/mule/http/2.0 http://www.mulesource.org/schema/mule/http/2.0/mule-http.xsd
  	   http://www.mulesource.org/schema/mule/wssecurity/2.0 http://www.mulesource.org/schema/mule/wssecurity/2.0/mule-wssecurity.xsd">

    <mule:configuration serverId="someId" defaultSynchronousEndpoints="true"/>

    <bean id="passwords" class="org.mule.extras.wssecurity.callbackhandlers.PasswordContainer">
        <constructor-arg>
            <props>
                <prop key="mulealias">mulepassword</prop>
                <prop key="gooduser">goodUserPassword</prop>
            </props>
        </constructor-arg>
    </bean>

    <stdio:connector name="SystemStreamConnector"
                     promptMessage="Please enter an input message: "
                     messageDelayTime="1000"/>

    <http:connector name="HttpConnector"
                    clientSoTimeout="10000"/>

    <axis:connector name="SecuredConnector"
            serverConfig="mule-axis-secure-server-config.wsdd"
            clientConfig="mule-axis-secure-client-config.wsdd"/>

    <axis:connector name="UnsecuredConnector"/>

    <mule:model name="_system">
        <mule:service name="_axisServiceComponent">
            <mule:component class="org.mule.providers.soap.axis.AxisServiceComponent"/>
            <mule:threading-profile maxBufferSize="100" threadTTL="600000" maxThreadsActive="30" maxThreadsIdle="20" />
            <mule:pooling-profile exhaustedAction="WHEN_EXHAUSTED_GROW" maxActive="20" maxIdle="20"/>
        </mule:service>
    </mule:model>

    <mule:model name="WebServiceExample">

        <mule:service name="SecureBridge">
            <mule:bridge-component/>
            <mule:inbound-router>
                <mule:endpoint address="vm://secured"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:outbound-pass-through-router>
                    <mule:endpoint name="secured" address="axis:http://localhost:64070/services/SecuredWS?method=echo" connector-ref="SecuredConnector"/>
                </mule:outbound-pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="UnSecureBridge1">
            <mule:bridge-component/>
            <mule:inbound-router>
                <mule:endpoint address="vm://unsecured1"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:outbound-pass-through-router>
                    <mule:endpoint address="axis:http://localhost:64077/services/UnsecuredWS1?method=echo" connector-ref="UnsecuredConnector"/>
                </mule:outbound-pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="UnSecureBridge2">
            <mule:bridge-component/>
            <mule:inbound-router>
                <mule:endpoint address="vm://unsecured2"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:outbound-pass-through-router>
                    <mule:endpoint address="axis:http://localhost:64078/services/UnsecuredWS2?method=echo" connector-ref="UnsecuredConnector"/>
                </mule:outbound-pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="SecuredWS">
            <mule:echo-component/>
            <mule:inbound-router>
                <mule:endpoint address="axis:http://localhost:64070/services" connector-ref="SecuredConnector">
                    <wssecurity:security-filter decryptionFile="in-encrypted-security.properties"/>
                </mule:endpoint>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:filtering-router>
                    <mule:endpoint address="stdio://System.out"/>
                </mule:filtering-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="UnsecuredWS1">
            <mule:echo-component/>
            <mule:inbound-router>
                <mule:endpoint address="axis:http://localhost:64077/services" connector-ref="UnsecuredConnector"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:filtering-router>
                    <mule:endpoint address="stdio://System.out"/>
                </mule:filtering-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="UnsecuredWS2">
            <mule:echo-component/>
            <mule:inbound-router>
                <mule:endpoint address="axis:http://localhost:64078/services" connector-ref="UnsecuredConnector"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:filtering-router>
                    <mule:endpoint address="stdio://System.out"/>
                </mule:filtering-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model>

</beans>


