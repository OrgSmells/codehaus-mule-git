<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
	   xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
       xmlns:axis="http://www.mulesource.org/schema/mule/axis/2.0"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
	   xmlns:wssecurity="http://www.mulesource.org/schema/mule/wssecurity/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd
	   http://www.mulesource.org/schema/mule/axis/2.0 http://www.mulesource.org/schema/mule/axis/2.0/mule-axis.xsd
	   http://www.mulesource.org/schema/mule/http/2.0 http://www.mulesource.org/schema/mule/http/2.0/mule-http.xsd
  	   http://www.mulesource.org/schema/mule/wssecurity/2.0 http://www.mulesource.org/schema/mule/wssecurity/2.0/mule-wssecurity.xsd">

    <configuration serverId="someId" defaultSynchronousEndpoints="true"/>

    <spring:bean id="passwords" class="org.mule.extras.wssecurity.callbackhandlers.PasswordContainer">
        <spring:constructor-arg>
            <spring:props>
                <spring:prop key="mulealias">mulepassword</spring:prop>
                <spring:prop key="gooduser">goodUserPassword</spring:prop>
            </spring:props>
        </spring:constructor-arg>
    </spring:bean>

    <stdio:connector name="SystemStreamConnector"
                     promptMessage="Please enter an input message: "
                     messageDelayTime="1000"/>

    <http:connector name="HttpConnector"
                    clientSoTimeout="10000"/>

    <axis:connector name="SecuredConnector"
            serverConfig="mule-axis-secure-server-config.wsdd"
            clientConfig="mule-axis-secure-client-config.wsdd"/>

    <axis:connector name="UnsecuredConnector"/>

    <model name="_system">
        <service name="_axisServiceComponent">
            <component class="org.mule.providers.soap.axis.AxisServiceComponent"/>
            <threading-profile maxBufferSize="100" threadTTL="600000" maxThreadsActive="30" maxThreadsIdle="20" />
            <pooling-profile exhaustedAction="WHEN_EXHAUSTED_GROW" maxActive="20" maxIdle="20"/>
        </service>
    </model>

    <model name="WebServiceExample">

        <service name="SecureBridge">
            <bridge-component/>
            <inbound-router>
                <endpoint address="vm://secured"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint name="secured" address="axis:http://localhost:64070/services/SecuredWS?method=echo" connector-ref="SecuredConnector"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="UnSecureBridge1">
            <bridge-component/>
            <inbound-router>
                <endpoint address="vm://unsecured1"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="axis:http://localhost:64077/services/UnsecuredWS1?method=echo" connector-ref="UnsecuredConnector"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="UnSecureBridge2">
            <bridge-component/>
            <inbound-router>
                <endpoint address="vm://unsecured2"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="axis:http://localhost:64078/services/UnsecuredWS2?method=echo" connector-ref="UnsecuredConnector"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="SecuredWS">
            <echo-component/>
            <inbound-router>
                <endpoint address="axis:http://localhost:64070/services" connector-ref="SecuredConnector">
                    <wssecurity:security-filter decryptionFile="in-encrypted-security.properties"/>
                </endpoint>
            </inbound-router>
            <outbound-router>
                <filtering-router>
                    <endpoint address="stdio://System.out"/>
                </filtering-router>
            </outbound-router>
        </service>

        <service name="UnsecuredWS1">
            <echo-component/>
            <inbound-router>
                <endpoint address="axis:http://localhost:64077/services" connector-ref="UnsecuredConnector"/>
            </inbound-router>
            <outbound-router>
                <filtering-router>
                    <endpoint address="stdio://System.out"/>
                </filtering-router>
            </outbound-router>
        </service>

        <service name="UnsecuredWS2">
            <echo-component/>
            <inbound-router>
                <endpoint address="axis:http://localhost:64078/services" connector-ref="UnsecuredConnector"/>
            </inbound-router>
            <outbound-router>
                <filtering-router>
                    <endpoint address="stdio://System.out"/>
                </filtering-router>
            </outbound-router>
        </service>

    </model>

</mule>


