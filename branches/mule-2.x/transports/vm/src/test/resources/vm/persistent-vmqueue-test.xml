<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">


    <vm:connector name="VMQueue" queueEvents="true">
        <vm:queueProfile persistent="true" maxOutstandingMessages="10"/>
    </vm:connector>

    <custom-transformer name="testTransformer"
                     class="org.mule.transformers.simple.StringToObjectArray"/>

    <model name="test">

        <service name="ReceiverUMO">
            <component class="org.mule.components.simple.BridgeComponent"/>
            <inbound-router>
                <vm:inbound-endpoint address="receiver"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <vm:outbound-endpoint address="echo">
                        <transformers-ref transformers="testTransformer"/>
                    </vm:outbound-endpoint>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="EchoUMO">
            <component class="org.mule.components.simple.BridgeComponent"/>
            <inbound-router>
                <vm:inbound-endpoint address="echo"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <vm:outbound-endpoint address="out"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

    </model>

</mule>