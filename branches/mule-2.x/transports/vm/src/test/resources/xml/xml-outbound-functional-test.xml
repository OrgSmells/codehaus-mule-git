<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xml-filter="http://www.mulesource.org/schema/mule/xml-filter/2.0"
       xmlns:xml-outbound="http://www.mulesource.org/schema/mule/xml-outbound/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/xml-filter/2.0 http://www.mulesource.org/schema/mule/xml-filter/2.0/mule-xml-filter.xsd
       http://www.mulesource.org/schema/mule/xml-outbound/2.0 http://www.mulesource.org/schema/mule/xml-outbound/2.0/mule-xml-outbound.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <vm:connector name="default"/>
    <vm:connector name="queue" queueEvents="true"/>

    <mule:endpoint name="split" address="vm://split" connector-ref="default"/>
    <mule:endpoint name="service1" address="vm://service1" connector-ref="queue"/>
    <mule:endpoint name="service2" address="vm://service2" connector-ref="queue"/>

    <mule:endpoint name="roundrobin" address="vm://roundrobin" connector-ref="default"/>
    <mule:endpoint name="robin1" address="vm://robin1" connector-ref="queue"/>
    <mule:endpoint name="robin2" address="vm://robin2" connector-ref="queue"/>

    <bean name="dom4jpe" class="org.mule.util.properties.Dom4jPropertyExtractor"/>

    <mule:model-seda name="xml outbound tests">

        <mule:service name="service splitter">
            <mule:component class="org.mule.components.simple.BridgeComponent"/>
            <mule:inbound-router>
                <mule:endpoint ref="split"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <xml-outbound:message-splitter splitExpression="/spring:beans/mule:model-seda/mule:service">
                    <mule:endpoint ref="service1">
                        <xml-filter:jxpath-filter pattern="/@name" expectedValue="service splitter"/>
                    </mule:endpoint>
                    <mule:endpoint ref="service1">
                        <xml-filter:jxpath-filter pattern="/@name" expectedValue="round robin"/>
                    </mule:endpoint>
                    <xml-outbound:namespace prefix="spring" uri="http://www.springframework.org/schema/beans"/>
                    <xml-outbound:namespace prefix="mule" uri="http://www.mulesource.org/schema/mule/core/2.0"/>
                </xml-outbound:message-splitter>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="round robin">
            <mule:component class="org.mule.components.simple.BridgeComponent"/>
            <mule:inbound-router>
                <mule:endpoint ref="roundrobin"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
