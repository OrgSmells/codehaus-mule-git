<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <mule:custom-transformer name="appendString"
                             class="org.mule.tck.functional.StringAppendTestTranformer"/>

    <bean name="ftc1" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="ftc2" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="through2" class="org.mule.components.simple.PassThroughComponent"/>

    <mule:model-seda name="testSimple">
        <mule:service name="testServiceSimple" service-ref="ftc1">
            <mule:inbound-router>
                <mule:endpoint address="vm://simple" transformers="appendString"/>
            </mule:inbound-router>
        </mule:service>
    </mule:model-seda>

    <mule:model-seda name="testChained">
        <mule:service name="testServiceChained" service-ref="through2">
            <mule:inbound-router>
                <mule:endpoint address="vm://chained"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://out" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>
        <mule:service name="testServiceChainedB" service-ref="ftc2">
            <mule:inbound-router>
                <mule:endpoint address="vm://out" transformers="appendString"/>
            </mule:inbound-router>
        </mule:service>
    </mule:model-seda>

</beans>
