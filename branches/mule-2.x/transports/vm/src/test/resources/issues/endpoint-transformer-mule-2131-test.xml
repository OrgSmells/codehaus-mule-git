<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <vm:connector name="default"/>
    <vm:connector name="queue" queueEvents="true"/>

    <mule:endpoint name="in" address="vm://in" connector-ref="default"/>
    <mule:endpoint name="direct" address="vm://direct" connector-ref="queue"/>
    <mule:endpoint name="global-name-global-transformer" address="vm://global-name-global-transformer" connector-ref="queue" transformers="transformer"/>
    <mule:endpoint name="global-name-local-transformer" address="vm://global-name-local-transformer" connector-ref="queue"/>

    <mule:custom-transformer name="transformer" class="org.mule.tck.functional.StringAppendTestTransformer"/>

    <mule:model name="endpoint transformer tests">

        <mule:service name="main">
            <mule:component class="org.mule.components.simple.BridgeComponent"/>
            <mule:inbound-router>
                <mule:endpoint ref="in"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:multicasting-router>
                    <mule:endpoint ref="direct"/>
                    <mule:endpoint ref="global-name-global-transformer"/>
                    <mule:endpoint name="local-name-local-transformer" address="vm://local-name-local-transformer" connector-ref="queue" transformers="transformer"/>
                    <!-- these two don't transform -->
                    <mule:endpoint ref="global-name-local-transformer" transformers="transformer"/>
                    <mule:endpoint address="vm://no-name-local-transformer" connector-ref="queue" transformers="transformer"/>
                </mule:multicasting-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model>

</beans>
