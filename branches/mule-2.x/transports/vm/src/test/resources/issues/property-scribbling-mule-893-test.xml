<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <vm:connector name="default" queueEvents="false"/>
    <vm:connector name="queue" queueEvents="true"/>

    <endpoint name="dispatch" address="vm://bridge" connector-ref="default"/>
    <endpoint name="receive" address="vm://result" connector-ref="queue"/>

    <model name="scribblingTestModel">

        <service name="bridge">
            <component class="org.mule.components.simple.BridgeComponent"/>
            <inbound-router>
                <inbound-endpoint ref="dispatch"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <outbound-endpoint address="vm://responder" synchronous="false" remoteSync="true"
                                       connector-ref="default"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="responder">
            <component class="org.mule.tck.functional.FunctionalTestComponent"/>
            <inbound-router>
                <inbound-endpoint address="vm://responder" synchronous="false" connector-ref="default"/>
            </inbound-router>
        </service>

    </model>

</mule>
