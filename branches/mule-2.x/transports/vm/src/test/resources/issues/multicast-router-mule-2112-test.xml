<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <endpoint name="inbound" address="vm://inbound"/>
    <endpoint name="endpointHop1" address="vm://hop1"/>
    <endpoint name="endpointHop2" address="vm://hop2"/>

    <model name="main" class="org.mule.tck.testmodels.mule.TestSedaModel">
        <service name="multicastComponent">
            <component class="org.mule.components.simple.PassThroughComponent"/>
            <inbound-router>
                <endpoint ref="inbound" synchronous="true"/>
            </inbound-router>
            <outbound-router>
                <multicasting-router>
                    <endpoint ref="endpointHop1"/>
                    <endpoint ref="endpointHop2"/>
                </multicasting-router>
            </outbound-router>
        </service>

        <service name="hop1">
            <component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <inbound-router>
                <endpoint ref="endpointHop1"/>
            </inbound-router>
        </service>

        <service name="hop2">
            <component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <inbound-router>
                <endpoint ref="endpointHop2"/>
            </inbound-router>
        </service>
    </model>

</mule>
