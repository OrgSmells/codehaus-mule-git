<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <mule:endpoint name="inbound" address="vm://inbound"/>
    <mule:endpoint name="endpointHop1" address="vm://hop1"/>
    <mule:endpoint name="endpointHop2" address="vm://hop2"/>

    <mule:model name="main" class="org.mule.tck.testmodels.mule.TestSedaModel">
        <mule:service name="multicastComponent">
            <mule:component class="org.mule.components.simple.PassThroughComponent"/>
            <mule:inbound-router>
                <mule:endpoint ref="inbound" synchronous="true"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:multicasting-router>
                    <mule:endpoint ref="endpointHop1"/>
                    <mule:endpoint ref="endpointHop2"/>
                </mule:multicasting-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="hop1">
            <mule:component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <mule:inbound-router>
                <mule:endpoint ref="endpointHop1"/>
            </mule:inbound-router>
        </mule:service>

        <mule:service name="hop2">
            <mule:component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <mule:inbound-router>
                <mule:endpoint ref="endpointHop2"/>
            </mule:inbound-router>
        </mule:service>
    </mule:model>

</beans>
