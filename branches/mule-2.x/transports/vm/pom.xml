<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule.transports</groupId>
        <artifactId>mule-transports</artifactId>
        <version>2.0-M2-SNAPSHOT</version>
    </parent>
    <artifactId>mule-transport-vm</artifactId>
    <!--<packaging>bundle</packaging>-->
    <name>VM Transport</name>
    <description>A Mule transport that enables event sending and receiving over VM or embedded memory queues. These
        queues can be persistent or transient.
    </description>

    <dependencies>
        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-module-client</artifactId>
            <version>${version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
         <plugins>
             <plugin>
                 <artifactId>maven-surefire-plugin</artifactId>
                 <configuration>
                     <excludes>
                         <!-- MULE-2103 -->
                         <exclude>**/RoundRobinXmlSplitterFunctionalTestCase.*</exclude>
                         <!-- MULE-2041 PersistentVMQueueTestCase needs a converted config -->
                         <exclude>**/PersistentVMQueueTestCase.*</exclude>
                         <!-- http://mule.mulesource.org/jira/browse/MULE-2125 -->
                         <exclude>**/MulticastRouterMule2112TestCase.*</exclude>
                         <!-- MULE-1581 im progress -->
                         <exclude>**/XmlTransformerFunctionalTestCase.*</exclude>
                     </excludes>
                 </configuration>
             </plugin>
              <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.mule.providers.vm.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
         </plugins>
    </build>

</project>
