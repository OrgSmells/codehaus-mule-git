<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:tcp="http://www.mulesource.org/schema/mule/tcp/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
               http://www.mulesource.org/schema/mule/tcp/2.0 META-INF/mule-tcp.xsd">

    <tcp:connector name="tcpConnector1"/>
    <tcp:connector name="tcpConnector2"/>

    <bean name="bridge" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="MultilpleConnectorsTestModel">
        <mule:service name="testDescriptor" service-ref="bridge">
            <mule:inbound-router>
                <!-- if the connector-ref was removed this would give an error
                     since we have multiple connectors -->
                <mule:endpoint address="tcp://localhost:12345" connector-ref="tcpConnector2"/>
            </mule:inbound-router>
        </mule:service>
    </mule:model-seda>

</beans>
