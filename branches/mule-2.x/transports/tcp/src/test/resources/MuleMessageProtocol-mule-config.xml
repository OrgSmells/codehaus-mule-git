<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:tcp="http://www.mulesource.org/schema/mule/tcp/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
               http://www.mulesource.org/schema/mule/tcp/2.0 http://www.mulesource.org/schema/mule/tcp/2.0/mule-tcp.xsd">

    <mule:configuration serverId="1.4-config">
        <mule:default-threading-profile threadWaitTimeout="30" maxThreadsActive="10" maxThreadsIdle="10"
            maxBufferSize="0" threadTTL="60000" poolExhaustedAction="RUN" />
    </mule:configuration>

    <vm:connector name="quedvm"
                  queueEvents="true"/>

    <tcp:connector name="tcpConnector"
                   tcpProtocolClassName="org.mule.providers.tcp.protocols.MuleMessageEOFProtocol"
                   keepSendSocketOpen="false"/>

    <mule:model-seda name="main">
        <mule:service name="BridgeIn"
                      implementation="org.mule.components.simple.PassThroughComponent">
            <mule:inbound-router>
                <mule:endpoint address="vm://in"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:message-chunking-router messageSize="90">
                    <mule:endpoint address="tcp://localhost:9994"/>
                </mule:message-chunking-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="BridgeOut"
                      implementation="org.mule.components.simple.PassThroughComponent">
            <mule:inbound-router>
                <mule:endpoint address="tcp://localhost:9994"/>
                <mule:message-chunking-aggregator-router/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://out"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
