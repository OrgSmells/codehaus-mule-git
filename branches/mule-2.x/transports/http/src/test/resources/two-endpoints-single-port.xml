<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/http/2.0 http://www.mulesource.org/schema/mule/http/2.0/mule-http.xsd">


    <http:connector name="httpConnector" keepAlive="false"/>

    <mule:model-seda name="test">

        <mule:service name="mycomponent1">
            <mule:component class="org.mule.tck.functional.FunctionalTestComponent">
                <mule:properties>
                    <entry key="returnMessage" value="mycomponent1"/>
                </mule:properties>
            </mule:component>

            <mule:inbound-router>
                <mule:endpoint address="http://localhost:60211/mycomponent1" synchronous="true"/>
            </mule:inbound-router>
        </mule:service>

        <mule:service name="mycomponent2">
            <mule:component class="org.mule.tck.functional.FunctionalTestComponent">
                <mule:properties>
                    <entry key="returnMessage" value="mycomponent2"/>
                </mule:properties>
            </mule:component>

            <mule:inbound-router>
                <mule:endpoint address="http://localhost:60211/mycomponent2" synchronous="true"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
