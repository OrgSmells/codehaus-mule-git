<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule-vm.xsd
       http://www.mulesource.org/schema/mule/http/2.0 META-INF/mule-http.xsd">

    <mule:endpoint name="base" address="http://localhost:60198" synchronous="true"/>
    <mule:endpoint name="adapted" address="http://localhost:60199" synchronous="true"/>
    <mule:endpoint name="ignored" address="http://localhost:60200" synchronous="true"/>
    <mule:endpoint name="transformed" address="http://localhost:60201" synchronous="true"/>

    <mule:custom-transformer name="appendString"
                             class="org.mule.tck.functional.StringAppendTestTranformer"/>

    <mule:custom-transformer name="appendString2"
                             class="org.mule.tck.functional.StringAppendTestTranformer">
        <property name="message" value=" transformed 2"/>
    </mule:custom-transformer>


    <!-- first, the simple two service model we use in all cases, with no additional
         transformers -->

    <bean name="ftc1" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="through1" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="baseModel">

        <mule:service name="baseService1" service-ref="through1">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="base"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo1" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="baseService2" service-ref="ftc1">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo1" synchronous="true"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>


    <!-- next, the same model but with adapted components that call
         getMessage() rather than getTransformedMessage() -->

    <bean name="ftc2" class="org.mule.providers.http.issues.NoTransformFunctionalTestComponent"/>
    <bean name="through2" class="org.mule.providers.http.issues.NoTransformPassThroughComponent"/>

    <mule:model-seda name="adaptedModel">

        <mule:service name="adaptedService1" service-ref="through2">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="adapted"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo2" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="adaptedService2" service-ref="ftc2">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo2" synchronous="true"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>


    <!-- now we add transformers to the adapted model - they should have no effect -->

    <bean name="ftc3" class="org.mule.providers.http.issues.NoTransformFunctionalTestComponent"/>
    <bean name="through3" class="org.mule.providers.http.issues.NoTransformPassThroughComponent"/>

    <mule:model-seda name="ignoredModel">

        <mule:service name="ignoredService1" service-ref="through3">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="ignored" transformers="appendString"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo3" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="ignoredService2" service-ref="ftc3">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo3" synchronous="true" transformers="appendString2"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>

    <!-- adding transformers to the base model will have an effect -->

    <bean name="ftc4" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="through4" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="transformedModel">

        <mule:service name="transformedService1" service-ref="through4">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="transformed" transformers="appendString"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo4" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="transformedService2" service-ref="ftc4">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo4" synchronous="true" transformers="appendString2"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>

</beans>