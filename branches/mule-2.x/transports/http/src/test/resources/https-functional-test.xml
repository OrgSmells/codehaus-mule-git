<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:https="http://www.mulesource.org/schema/mule/https/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/https/2.0 http://www.mulesource.org/schema/mule/https/2.0/mule-https.xsd">

    <https:connector name="httpConnector">
        <https:tls-client
                clientKeyStore="clientKeystore"
                clientKeyStorePassword="mulepassword"/>
        <https:tls-key-store
                keyStore="serverKeystore"
                keyPassword="mulepassword"
                keyStorePassword="mulepassword"/>
        <https:tls-server
                trustStore="trustStore"
                trustStorePassword="mulepassword"/>
    </https:connector>

    <mule:endpoint
            name="clientEndpoint"
            address="https://localhost:60202"
            synchronous="true"
            connector-ref="httpConnector"/>

    <mule:model-custom name="main" class="org.mule.tck.testmodels.mule.TestSedaModel">
        <mule:service-custom name="testComponent">
            <mule:component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <mule:inbound-router>
                <mule:endpoint ref="clientEndpoint"/>
            </mule:inbound-router>
        </mule:service-custom>
    </mule:model-custom>

</beans>
