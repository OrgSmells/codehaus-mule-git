<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 META-INF/mule-vm.xsd
       http://www.mulesource.org/schema/mule/http/2.0 META-INF/mule-http.xsd">

    <http:connector name="PollingHttpConnector">
        <mule:service-overrides messageReceiver="org.mule.providers.http.PollingHttpMessageReceiver"/>
    </http:connector>

    <http:connector name="HttpConnector"/>

    <vm:connector name="vmQueue" queueEvents="true"/>

    <bean name="ftc1" class="org.mule.tck.functional.FunctionalTestComponent"/>

    <bean name="ftc2" class="org.mule.tck.functional.FunctionalTestComponent"/>

    <mule:model-seda name="http polling test model">

        <mule:service name="pollingUMO" service-ref="ftc1">
            <mule:inbound-router>
                <mule:endpoint address="http://marie:marie@localhost:4567"
                               connector-ref="PollingHttpConnector">
                    <property name="pollingFrequency" value="300000"/>
                </mule:endpoint>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://toclient"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="polledUMO" service-ref="ftc2">
            <mule:inbound-router>
                <mule:endpoint address="http://localhost:4567"
                               connector-ref="HttpConnector"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
