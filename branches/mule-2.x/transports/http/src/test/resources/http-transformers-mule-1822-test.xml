<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:http="http://www.mulesource.org/schema/mule/http/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.mulesource.org/schema/mule/http/2.0 http://www.mulesource.org/schema/mule/http/2.0/mule-http.xsd">

    <mule:endpoint name="base" address="http://localhost:60198" synchronous="true"/>
    <mule:endpoint name="response" address="http://localhost:60199" synchronous="true"/>
    <mule:endpoint name="both" address="http://localhost:60200" synchronous="true"/>

    <mule:custom-transformer name="appendString"
                             class="org.mule.tck.functional.StringAppendTestTranformer"/>

    <mule:custom-transformer name="appendString2"
                             class="org.mule.tck.functional.StringAppendTestTranformer">
        <property name="message" value=" transformed 2"/>
    </mule:custom-transformer>

    <mule:custom-transformer name="appendResponse"
                             class="org.mule.tck.functional.StringAppendTestTranformer">
        <property name="message" value=" response"/>
    </mule:custom-transformer>

    <mule:custom-transformer name="appendResponse2"
                             class="org.mule.tck.functional.StringAppendTestTranformer">
        <property name="message" value=" response 2"/>
    </mule:custom-transformer>


    <!-- first, the simple two service model we use in all cases, with no additional
         transformers -->

    <bean name="ftc1" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="through1" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="baseModel">

        <mule:service name="baseService1" service-ref="through1">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="base"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo1" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="baseService2" service-ref="ftc1">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo1" synchronous="true"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>


    <!-- add reponse transformers to the base model should make a difference -->

    <bean name="ftc2" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="through2" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="responseModel">

        <mule:service name="responseService1" service-ref="through2">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="response" responseTransformers="appendResponse"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo2" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="responseService2" service-ref="ftc2">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo2" synchronous="true" responseTransformers="appendResponse2"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>


    <!-- grand finale - innies and outies together! -->

    <bean name="ftc3" class="org.mule.tck.functional.FunctionalTestComponent"/>
    <bean name="through3" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="bothModel">

        <mule:service name="bothService1" service-ref="through3">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="both"
                                   transformers="appendString"
                                   responseTransformers="appendResponse"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://echo3" synchronous="true"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="bothService2" service-ref="ftc3">
            <mule:inbound-router>
                <mule:endpoint address="vm://echo3" synchronous="true"
                               transformers="appendString2"
                               responseTransformers="appendResponse2"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-seda>

</beans>