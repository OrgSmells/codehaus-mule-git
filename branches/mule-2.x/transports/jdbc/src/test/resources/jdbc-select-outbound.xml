<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.2"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:jdbc="http://www.mulesource.org/schema/mule/jdbc/2.2"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.mulesource.org/schema/mule/core/2.2 http://www.mulesource.org/schema/mule/core/2.2/mule.xsd
       http://www.mulesource.org/schema/mule/jdbc/2.2 http://www.mulesource.org/schema/mule/jdbc/2.2/mule-jdbc.xsd">

    <model name="JdbcSelectOnOutbound">
        <service name="bridge">
            <inbound>
                <inbound-endpoint address="vm://jdbc.test"/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <jdbc:outbound-endpoint queryKey="getTest">
                        <!-- this is substituted in the SQL template defined in jdbc-connector.xml -->
                        <property key="type" value="1"/>
                    </jdbc:outbound-endpoint>
                </pass-through-router>
            </outbound>
        </service>

        <service name="bridgeA">
            <inbound>
                <inbound-endpoint address="vm://terra"/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <jdbc:outbound-endpoint address="jdbc://getTestPayload"/>
                </pass-through-router>
            </outbound>
        </service>
        
        <service name="chain2SelectAlwaysBegin">
            <inbound>
                <inbound-endpoint address="vm://chain.always.begin"/>
            </inbound>
            <outbound>
                <chaining-router>
                    <jdbc:outbound-endpoint queryKey="selectCount">
                        <jdbc:transaction action="ALWAYS_BEGIN"/>
                    </jdbc:outbound-endpoint>
                    
                    <jdbc:outbound-endpoint address="jdbc://getTest?type=1">
                        <jdbc:transaction action="ALWAYS_BEGIN"/>
                    </jdbc:outbound-endpoint>
                    
                    <jdbc:transaction action="ALWAYS_BEGIN"/>
                </chaining-router>
            </outbound>
        </service>
        
        <service name="chain2SelectBeginOrJoin">
            <inbound>
                <inbound-endpoint address="vm://chain.begin.or.join"/>
            </inbound>
            <outbound>
                <chaining-router>
                    <jdbc:outbound-endpoint queryKey="selectCount">
                        <jdbc:transaction action="BEGIN_OR_JOIN"/>
                    </jdbc:outbound-endpoint>
                    <jdbc:outbound-endpoint address="jdbc://getTest?type=1">
                        <jdbc:transaction action="ALWAYS_BEGIN"/>
                    </jdbc:outbound-endpoint>
                    
                    <jdbc:transaction action="ALWAYS_BEGIN"/>
                </chaining-router>
            </outbound>
        </service>
    </model>
</mule>
