<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xmlns:multicast="http://www.mulesource.org/schema/mule/multicast/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 META-INF/mule-vm.xsd
               http://www.mulesource.org/schema/mule/multicast/2.0 META-INF/mule-multicast.xsd">

    <vm:connector name="vm-queue" queueEvents="true"/>

    <!-- 224.0.0.1 is all systems on this subnet -->
    <mule:endpoint address="multicast://224.0.0.1:60131" name="serverEndpoint"/>

    <mule:model-seda name="main">

        <mule:service name="Component1" service-ref="testComponent1">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="serverEndpoint"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://foo"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="Component2" service-ref="testComponent2">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="serverEndpoint"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://foo"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="Component3" service-ref="testComponent3">
            <mule:inbound-router>
                <mule:endpoint-ref nameref="serverEndpoint"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://foo"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model-seda>

    <bean name="testComponent1" class="org.mule.tck.functional.FunctionalTestComponent">
        <property name="appendComponentName" value="true"/>
    </bean>

    <bean name="testComponent2" class="org.mule.tck.functional.FunctionalTestComponent">
        <property name="appendComponentName" value="true"/>
    </bean>

    <bean name="testComponent3" class="org.mule.tck.functional.FunctionalTestComponent">
        <property name="appendComponentName" value="true"/>
    </bean>

</beans>
