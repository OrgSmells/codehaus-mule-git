<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xmlns:multicast="http://www.mulesource.org/schema/mule/multicast/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
               http://www.mulesource.org/schema/mule/multicast/2.0 http://www.mulesource.org/schema/mule/multicast/2.0/mule-multicast.xsd">

    <vm:connector name="vm-queue" queueEvents="true"/>

    <!-- 224.0.0.1 is all systems on this subnet -->
    <endpoint address="multicast://224.0.0.1:60131" name="serverEndpoint"/>

    <model name="main">

        <service name="Component1">
            <component class="org.mule.tck.functional.FunctionalTestComponent">
                <properties>
                    <spring:entry key="appendComponentName" value="true"/>
                </properties>
            </component>
            <inbound-router>
                <endpoint ref="serverEndpoint"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="vm://foo"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="Component2">
            <component class="org.mule.tck.functional.FunctionalTestComponent">
                <properties>
                    <spring:entry key="appendComponentName" value="true"/>
                </properties>
            </component>
            <inbound-router>
                <endpoint ref="serverEndpoint"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="vm://foo"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="Component3">
            <component class="org.mule.tck.functional.FunctionalTestComponent">
                <properties>
                    <spring:entry key="appendComponentName" value="true"/>
                </properties>
            </component>
            <inbound-router>
                <endpoint ref="serverEndpoint"/>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <endpoint address="vm://foo"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

    </model>

</mule>
