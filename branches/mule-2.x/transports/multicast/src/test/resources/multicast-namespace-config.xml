<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:multicast="http://www.mulesource.org/schema/mule/multicast/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
       http://www.mulesource.org/schema/mule/multicast/2.0 META-INF/mule-multicast.xsd">

    <multicast:connector name="multicastConnector"
                   receiveBufferSize="1234"
                   receiveTimeout="2345"
                   sendBufferSize="3456"
                   sendTimeout="4567"
                   timeToLive="5678"
                   broadcast="true"
                   loopback="true"
                   keepSendSocketOpen="false"
            />

</beans>