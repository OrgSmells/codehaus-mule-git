<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:imap="http://www.mulesource.org/schema/mule/imap/2.0"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/imap/2.0 http://www.mulesource.org/schema/mule/imap/2.0/mule-imap.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

    <imap:connector name="imapConnector"/>
    <vm:connector name="vmConnector" queueEvents="true"/>

    <bean name="bridge" class="org.mule.components.simple.BridgeComponent"/>
    <bean name="mailToString" class="org.mule.providers.email.transformers.EmailMessageToString"/>

    <mule:model-seda name="test">

        <mule:service name="relay" service-ref="bridge">
            <mule:inbound-router>
                <mule:endpoint address="imap://bob:password@localhost:65443"
                               transformers="mailToString">
                    <mule:retry-connection-strategy retryCount="3" retryFrequency="1000"/>
                </mule:endpoint>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://receive"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
