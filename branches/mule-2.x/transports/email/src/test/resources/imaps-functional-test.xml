<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:imap="http://www.mulesource.org/schema/mule/imap/2.0"
       xmlns:imaps="http://www.mulesource.org/schema/mule/imaps/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/imap/2.0 http://www.mulesource.org/schema/mule/imap/2.0/mule-imap.xsd
       http://www.mulesource.org/schema/mule/imaps/2.0 http://www.mulesource.org/schema/mule/imaps/2.0/mule-imaps.xsd">

    <imaps:connector name="imapsConnector">
        <imaps:tls-client
                clientKeyStore="clientKeystore"
                clientKeyStorePassword="mulepassword"/>
        <imaps:tls-trust-store
                trustStore="greenmail-truststore"
                trustStorePassword="password"/>
    </imaps:connector>

    <bean name="bridge" class="org.mule.components.simple.BridgeComponent"/>

    <mule:model-seda name="test">

        <mule:service name="relay" service-ref="bridge">
            <mule:inbound-router>
                <mule:endpoint address="imaps://bob%40example.com:password@localhost:65432" connector-ref="imapsConnector">
                    <mule:retry-connection-strategy inbound="true" retryCount="5" retryFrequency="1000"/>
                </mule:endpoint>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="vm://receive"/>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model-seda>

</beans>
