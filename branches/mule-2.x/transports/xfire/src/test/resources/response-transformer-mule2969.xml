<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:spring="http://www.springframework.org/schema/beans" 
    xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <custom-transformer class="org.mule.tck.functional.StringAppendTestTransformer" name="StringAppendTestTransformer" />

    <model name="model">

        <service name="XFireService">
            <inbound>
                <inbound-endpoint address="xfire:http://localhost:4444/services" remoteSync="true"
                    responseTransformer-refs="StringAppendTestTransformer" />
            </inbound>
            <echo-component />
            <outbound>
                <outbound-pass-through-router>
                    <outbound-endpoint address="vm://echo" />
                    <reply-to address="vm://reply" />
                </outbound-pass-through-router>
            </outbound>
            <async-reply>
                <inbound-endpoint address="vm://reply"/>
                <single-async-reply-router/>
            </async-reply>
        </service>

        <service name="EchoService">
            <inbound>
                <inbound-endpoint address="vm://echo" />
            </inbound>
            <echo-component />
        </service>

    </model>

</mule>