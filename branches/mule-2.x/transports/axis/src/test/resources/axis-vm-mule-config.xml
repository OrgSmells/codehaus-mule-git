<?xml version="1.0" encoding="ISO-8859-1"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <spring:bean id="tscFactory" class="org.mule.util.object.SimpleObjectFactory">
        <spring:property name="objectClass" value="org.mule.tck.testmodels.services.TestServiceComponent"/>
    </spring:bean>

    <model name="test">
        <service name="mycomponent">
            <component factory-ref="tscFactory"/>
            <inbound-router>
                <endpoint address="axis:vm://mycomponent"/>
            </inbound-router>
        </service>
        
        <service name="mycomponent2">
            <component factory-ref="tscFactory"/>
            <inbound-router>
                <endpoint address="axis:vm://mycomponent2">
                    <properties>
                        <spring:entry key="serviceInterfaces">
                            <spring:list>
                                <spring:value>org.mule.components.simple.EchoService</spring:value>
                                <spring:value>org.mule.tck.testmodels.services.DateService</spring:value>
                            </spring:list>
                        </spring:entry>
                    </properties>
                </endpoint>
            </inbound-router>
        </service>
        
        <service name="mycomponent3">
            <component factory-ref="tscFactory"/>
            <inbound-router>
                <endpoint address="axis:vm://mycomponent3"/>
            </inbound-router>
        </service>
        
        <service name="mycomponent4">
            <component factory-ref="tscFactory"/>
            <inbound-router>
                <endpoint address="axis:vm://mycomponent4" synchronous="true"/>
            </inbound-router>
        </service>
    </model>
</mule>
