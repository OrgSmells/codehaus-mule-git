<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.2"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:udp="http://www.mulesource.org/schema/mule/udp/2.2"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.2"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core/2.2 http://www.mulesource.org/schema/mule/core/2.2/mule.xsd
               http://www.mulesource.org/schema/mule/vm/2.2 http://www.mulesource.org/schema/mule/vm/2.2/mule-vm.xsd
               http://www.mulesource.org/schema/mule/udp/2.2 http://www.mulesource.org/schema/mule/udp/2.2/mule-udp.xsd">

    <serializable-to-byte-array-transformer name="SerializableToByteArray"/>

    <model name="main">

        <service name="PassingThrough">
            <inbound>
                <udp:inbound-endpoint host="#[hostname]" port="61000"/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <udp:outbound-endpoint host="#[hostname]" port="61001"/>
                </pass-through-router>
            </outbound>
        </service>

    </model>
</mule>
