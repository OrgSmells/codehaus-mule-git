<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:jms="http://www.mulesource.org/schema/mule/jms/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/jms/2.0 http://www.mulesource.org/schema/mule/jms/2.0/mule-jms.xsd">

    <model name="transactionTestModel" class="org.mule.tck.testmodels.mule.TestSedaModel">
        <service name="component1">
            <component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <inbound-router>
                <inbound-endpoint address="jms://component1In">
                    <transaction action="NONE"/>
                </inbound-endpoint>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <outbound-endpoint address="jms://component1Out"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="component2">
            <component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <inbound-router>
                <inbound-endpoint address="jms://component2In">
                    <transaction action="ALWAYS_BEGIN">
                        <transaction-factory scope="singleton" instance-ref="txFactory"/>
                    </transaction>
                </inbound-endpoint>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <outbound-endpoint address="jms://component2Out">
                        <transaction action="ALWAYS_JOIN"/>
                    </outbound-endpoint>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="component3">
            <component class="org.mule.tck.functional.FunctionalTestComponent" scope="singleton"/>
            <inbound-router>
                <inbound-endpoint address="jms://component3In">
                    <transaction action="NONE">
                        <transaction-factory scope="singleton" instance-ref="txFactory"/>
                    </transaction>
                </inbound-endpoint>
            </inbound-router>
            <outbound-router>
                <outbound-pass-through-router>
                    <outbound-endpoint address="jms://component3Out">
                        <transaction action="ALWAYS_JOIN"/>
                    </outbound-endpoint>
                </outbound-pass-through-router>
            </outbound-router>
            <default-connector-exception-strategy>
                <outbound-endpoint address="jms://dead.letter">
                    <transaction action="ALWAYS_JOIN"/>
                </outbound-endpoint>
            </default-connector-exception-strategy>
        </service>
    </model>
</mule>
