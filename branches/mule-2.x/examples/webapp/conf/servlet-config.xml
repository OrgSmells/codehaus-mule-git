<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:servlet="http://www.mulesource.org/schema/mule/servlet/2.0"
       xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/servlet/2.0 http://www.mulesource.org/schema/mule/servlet/2.0/mule-servlet.xsd
               http://www.mulesource.org/schema/mule/file/2.0 http://www.mulesource.org/schema/mule/file/2.0/mule-file.xsd">

    <mule:endpoint name="restFileEndpoint" address="file://./.mule/restFile"/>

    <!-- workaround for http://mule.mulesource.org/jira/browse/MULE-1827 -->
    <mule:custom-transformer class="org.mule.transformers.simple.MessagePropertiesTransformer">
        <mule:property name="addProperties">
            <map>
                <entry key="Content-Type" value="text/plain"/>
            </map>
        </mule:property>
    </mule:custom-transformer>

    <mule:model name="samples">

        <mule:service name="restTest">
            <mule:component class="org.mule.samples.rest.RestTester">
                <mule:properties>
                    <entry key="prefix" value="Received"/>
                </mule:properties>
            </mule:component>
            <mule:inbound-router>
                <mule:endpoint address="servlet://restPUTTest" responseTransformers="PlainTextResponseTransformer"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:outbound-pass-through-router>
                    <mule:endpoint address="restFileEndpoint"/>
                </mule:outbound-pass-through-router>
            </mule:outbound-router>
        </mule:service>

    </mule:model>

</beans>
