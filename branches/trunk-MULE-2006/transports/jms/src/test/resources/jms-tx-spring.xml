<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="jmsConnectionFactoryXa"
          class="org.apache.activemq.ActiveMQXAConnectionFactory">
        <property name="brokerURL">
            <value>vm://localhost?broker.persistent=false&amp;broker.useJmx=false</value>
        </property>
    </bean>

    <bean id="jmsConnectionFactory"
          class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL">
            <value>vm://localhost?broker.persistent=false&amp;broker.useJmx=false</value>
        </property>

    </bean>

    <bean id="redeliveryPolicy" class="org.apache.activemq.RedeliveryPolicy">
        <property name="maximumRedeliveries"><value>2</value></property>
    </bean>

    <bean id="jmsConnectionFactoryRollback"
          class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL">
            <value>vm://localhost?broker.persistent=false&amp;broker.useJmx=false</value>
        </property>
        <property name="redeliveryPolicy">
            <ref bean="redeliveryPolicy"/>
        </property>

    </bean>


    <bean id="functionalTestRollbackBean" class="org.mule.tck.functional.FunctionalTestComponent">
        <property name="throwException">
            <value>true</value>
        </property>
    </bean>


</beans>
