<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:cxf="http://www.mulesource.org/schema/mule/cxf"
  xmlns:cxf-core="http://cxf.apache.org/core"
  xmlns:mule-xml="http://www.mulesource.org/schema/mule/xml"
  xmlns:http="http://www.mulesource.org/schema/mule/http"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
               http://www.mulesource.org/schema/mule/cxf http://www.mulesource.org/schema/mule/cxf/3.0/mule-cxf.xsd
               http://www.mulesource.org/schema/mule/xml http://www.mulesource.org/schema/mule/xml/3.0/mule-xml.xsd
               http://www.mulesource.org/schema/mule/http http://www.mulesource.org/schema/mule/http/3.0/mule-http.xsd
               http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

  <mule-xml:xslt-transformer xsl-file="direct/test.xsl" name="TestXslt" 
      returnClass="org.w3c.dom.Document"/>
  
  <model name="DirectXmlTest">

    <service name="echoService">
      <inbound>
        <cxf:inbound-endpoint
          address="vm://echo" frontend="simple" synchronous="true"/>
      </inbound>
      <echo-component/>
    </service>
    
    <service name="echoWithTransform">
      <inbound>
        <inbound-endpoint
          address="vm://echoWithTransform" synchronous="true"/>
      </inbound>
      <outbound>
        <filtering-router>
            <outbound-endpoint address="vm://echo" synchronous="true"/>
            <mule-xml:jaxen-filter pattern="/s:Envelope/s:Body/@foo" expectedValue="bar">
                <mule-xml:namespace prefix="s" uri="http://schemas.xmlsoap.org/soap/envelope/"/>
            </mule-xml:jaxen-filter>
        </filtering-router>
      </outbound>
    </service>
    
  </model>

</mule>

