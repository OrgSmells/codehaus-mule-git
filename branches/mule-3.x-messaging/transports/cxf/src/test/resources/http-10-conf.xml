<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:cxf="http://www.mulesource.org/schema/mule/cxf"
  xmlns:cxf-core="http://cxf.apache.org/core"
  xmlns:http="http://www.mulesource.org/schema/mule/http"
  xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
               http://www.mulesource.org/schema/mule/cxf http://www.mulesource.org/schema/mule/cxf/3.0/mule-cxf.xsd
               http://www.mulesource.org/schema/mule/http http://www.mulesource.org/schema/mule/http/3.0/mule-http.xsd
               http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

  <cxf:endpoint 
      name="cxfOutbound" 
      address="http://localhost:63081/services/greeter"
      clientClass="org.apache.hello_world_soap_http.SOAPService" 
      wsdlPort="SoapPort" 
      wsdlLocation="classpath:/wsdl/hello_world.wsdl"
      operation="greetMe"
      synchronous="true"
      applyTransformersToProtocol="false">
      <message-properties-transformer> 
        <add-message-property key="http.version" value="HTTP/1.0"/> 
      </message-properties-transformer> 
      
      <cxf:inInterceptors>
          <spring:bean id="foo1" class="org.apache.cxf.interceptor.LoggingInInterceptor"/>    
      </cxf:inInterceptors>
      <cxf:outInterceptors>
          <spring:bean id="foo2" class="org.apache.cxf.interceptor.LoggingOutInterceptor"/>    
      </cxf:outInterceptors>
  </cxf:endpoint>
    
  <cxf:endpoint 
      name="cxfOutbound2" 
      address="http://localhost:63081/services/greeter"
      clientClass="org.apache.hello_world_soap_http.SOAPService" 
      wsdlPort="SoapPort" 
      wsdlLocation="classpath:/wsdl/hello_world.wsdl"
      operation="greetMe"
      synchronous="true"
      applyTransformersToProtocol="true">
      <message-properties-transformer> 
        <add-message-property key="http.version" value="HTTP/1.0"/> 
      </message-properties-transformer>
  </cxf:endpoint>
    
  <model name="TestCxfModel">
  
    <service name="greeterService">
      <inbound>
          <cxf:inbound-endpoint address="http://localhost:63081/services/greeter" 
                                synchronous="true"/>
      </inbound>
      <component>
        <singleton-object class="org.apache.hello_world_soap_http.GreeterImpl"/>
      </component>
    </service> 

  </model>

</mule>

