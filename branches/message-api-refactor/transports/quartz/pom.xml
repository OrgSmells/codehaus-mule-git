<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule.transports</groupId>
        <artifactId>mule-transports</artifactId>
        <version>2.0-M2-SNAPSHOT</version>
    </parent>
    <artifactId>mule-transport-quartz</artifactId>
    <!--<packaging>bundle</packaging>-->
    <name>Quartz Transport</name>
    <description>A Mule transport for Quartz. This transport supplies a receiver for jobs scheduled with Quartz.</description>

    <build>
         <plugins>
             <plugin>
                 <artifactId>maven-surefire-plugin</artifactId>
                 <configuration>
                     <excludes>
                         <!-- MULE-1925 -->
                         <exclude>**/QuartzFunctionalLegacyTestCase.*</exclude>
                         <exclude>**/QuartzFunctionalTestCase.*</exclude>
                     </excludes>
                 </configuration>
             </plugin>
              <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.mule.providers.quartz.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
         </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>quartz</groupId>
            <artifactId>quartz-all</artifactId>
            <version>1.6.0</version>
        </dependency>

        <!-- The Mule client is needed for MuleClientReceiveJob and MuleClientDispatchJob -->
        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-module-client</artifactId>
            <version>${version}</version>
        </dependency>

    </dependencies>
</project>
