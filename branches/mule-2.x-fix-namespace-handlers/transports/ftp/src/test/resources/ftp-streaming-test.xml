<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:ftp="http://www.mulesource.org/schema/mule/ftp/2.0"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 META-INF/mule.xsd
               http://www.mulesource.org/schema/mule/ftp/2.0 META-INF/mule-ftp.xsd">

    <ftp:connector name="ftp" pollingFrequency="2000">
        <mule:custom-exception-strategy class="org.mule.providers.ftp.DebugExceptionStrategy"/>
    </ftp:connector>

    <bean name="bridgeImplementation"
        class="org.mule.components.simple.StreamingBridgeComponent"/>

    <bean name="ftc"
        class="org.mule.tck.functional.FunctionalTestComponent"/>

    <mule:model-streaming name="main">

        <mule:service name="bridge" service-ref="bridgeImplementation">
            <mule:inbound-router>
                <mule:endpoint address="tcp://localhost:60196" connector-ref="ftp"/>
            </mule:inbound-router>
            <mule:outbound-router>
                <mule:pass-through-router>
                    <mule:endpoint address="ftp://anonymous:email@localhost:60197">
                        <mule:retry-connection-strategy
                                inbound="false"
                                retryCount="3"
                                retryFrequency="2000"/>
                    </mule:endpoint>
                </mule:pass-through-router>
            </mule:outbound-router>
        </mule:service>

        <mule:service name="testComponent" singleton="true">
            <mule:inbound-router>
                <mule:endpoint address="ftp://anonymous:email@localhost:60197"/>
            </mule:inbound-router>
        </mule:service>

    </mule:model-streaming>

</beans>
