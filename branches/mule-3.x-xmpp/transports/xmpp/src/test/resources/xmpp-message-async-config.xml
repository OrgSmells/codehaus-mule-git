<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:xmpp="http://www.mulesource.org/schema/mule/xmpp"
       xmlns:vm="http://www.mulesource.org/schema/mule/vm"
       xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm http://www.mulesource.org/schema/mule/vm/3.0/mule-vm.xsd
       http://www.mulesource.org/schema/mule/xmpp http://www.mulesource.org/schema/mule/xmpp/3.0/mule-xmpp.xsd">

<!-- TODO xmpp: use the subject of the message, both preconfigured here and as message property -->
    <!-- Dispatch via normal message -->
    <model>
        <service name="dispatchViaMessage">
            <inbound>
                <vm:inbound-endpoint path="in"/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <xmpp:outbound-endpoint type="MESSAGE" recipient="${recipient}"/>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>
