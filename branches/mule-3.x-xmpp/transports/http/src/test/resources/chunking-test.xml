<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:http="http://www.mulesource.org/schema/mule/http"
       xmlns:test="http://www.mulesource.org/schema/mule/test"
    xsi:schemaLocation="
       http://www.mulesource.org/schema/mule/test http://www.mulesource.org/schema/mule/test/3.0/mule-test.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/http http://www.mulesource.org/schema/mule/http/3.0/mule-http.xsd">

    <model name="main">
        <custom-service name="/foo" class="org.mule.tck.testmodels.mule.TestSedaService">
            <inbound>
                <http:inbound-endpoint address="http://localhost:60200/foo" synchronous="true"/>
            </inbound>
            <component>
                <singleton-object class="org.mule.transport.http.functional.PartialReadComponent"/>
            </component>
        </custom-service>
    </model>
</mule>

