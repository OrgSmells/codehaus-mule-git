<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.2"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:mule="http://www.mulesource.org/schema/mule/core/2.2"
      xmlns:test="http://www.mulesource.org/schema/mule/test/2.2"
      xsi:schemaLocation="
       http://www.mulesource.org/schema/mule/test/2.2 http://www.mulesource.org/schema/mule/test/2.2/mule-test.xsd
       http://www.mulesource.org/schema/mule/core/2.2 http://www.mulesource.org/schema/mule/core/2.2/mule.xsd">

    <endpoint name="in" address="${inbound.destination}"/>
    <endpoint name="out" address="${outbound.destination}"/>
    <endpoint name="topic" address="${broadcast.topic.destination}"/>

    <model name="echoSample">
        <service name="InputPart">
            <inbound>
                <inbound-endpoint ref="in"/>
            </inbound>
            <test:component/>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint ref="topic"/>
                </pass-through-router>
            </outbound>
        </service>

        <service name="Topic1">
            <inbound>
                <inbound-endpoint ref="topic"/>
            </inbound>
            <test:component>
                <test:return-data>OUTPUT MESSAGE</test:return-data>
            </test:component>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint ref="out"/>
                </pass-through-router>
            </outbound>
        </service>

        <service name="Topic2">
            <inbound>
                <inbound-endpoint ref="topic"/>
            </inbound>
            <test:component>
                <test:return-data>OUTPUT MESSAGE</test:return-data>
            </test:component>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint ref="out"/>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>
