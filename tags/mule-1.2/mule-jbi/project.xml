<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <name>Mule JBI</name>
    <groupId>mule</groupId>
    <artifactId>mule-jbi</artifactId>
    <currentVersion>SNAPSHOT</currentVersion>
	<build>
		<sourceDirectory>${basedir}/main/src/java</sourceDirectory>
		<unitTestSourceDirectory>${basedir}/main/test/java</unitTestSourceDirectory>
		<unitTest>
			<resources>
				<resource>
					<directory>${basedir}/main/test/resources</directory>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>${basedir}/main/src/resources</directory>
				<filtering>false</filtering>
			</resource>
		</resources>
	</build>
</project>
