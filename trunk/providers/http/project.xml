<?xml version="1.0"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>mule-http-provider</artifactId>
    <name>Mule Http Provider</name>
    <description>A Mule provider for Http Connectivity. This provider supplies a simple Http Server implementation. for
        more information see the
        <a href="http://wiki.muleumo.org/display/MULE/Providers+Guide">Providers Guide</a>.
    </description>
    <shortDescription>http</shortDescription>
    <url>http://www.muleumo.org/doc/providers/http/</url>
    <dependencies>
        <dependency>
            <id>commons-httpclient</id>
            <version>2.0.2</version>
            <url>http://jakarta.apache.org/commons/httpclient/index.html</url>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-tcp-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>
</project>
