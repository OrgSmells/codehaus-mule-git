<?xml version="1.0"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>mule-ssl-provider</artifactId>
    <name>Mule SSL Provider</name>
    <description>A Mule provider for Socket connectivity using SSL authentication. This provider supplies a tcp Server
        and client implementation over SSL. for more information see the
        <a href="http://wiki.muleumo.org/display/MULE/Providers+Guide">Providers Guide</a>.
    </description>
    <shortDescription>ssl</shortDescription>
    <url>http://www.muleumo.org/doc/providers/ssl/</url>
    <dependencies>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-tcp-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>
</project>
