<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codehaus.mule</groupId>
        <artifactId>mule-providers</artifactId>
        <relativePath>../pom.xml</relativePath>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <artifactId>mule-soap-provider</artifactId>
    <packaging>jar</packaging>
    <name>Soap Provider</name>
    <description>A Mule provider for Soap Connectivity. The provider will use Axis or Glue depending on which is on the classpath.</description>

    <build>
        <!--
             For some reason it does not pick up the standard m2 folder structure here
             as described in http://tinyurl.com/amty9
             Make it work by explicitly specifying them
             TODO fix it
        -->
        <sourceDirectory>src/main</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-http-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>glue</groupId>
            <artifactId>glue</artifactId>
            <version>5.0.2</version>
            <scope>provided</scope>
        </dependency>
        <!-- needed by the Axis Service component -->
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-extras-client</artifactId>
            <version>${version}</version>
        </dependency>
    </dependencies>
</project>
