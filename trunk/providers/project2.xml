<project>
    <extend>${basedir}/../mule/project.xml</extend>
    <name>Mule Providers</name>
    <id>mule-providers</id>
    <package>org.mule.providers</package>
    <dependencies>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-core</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <!-- useful for the functional tests -->
        <dependency>
            <artifactId>mule-extras-client</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>
     <build>
        <nagEmailAddress>scm@mule.codehaus.org</nagEmailAddress>
        <sourceDirectory>${basedir}/main/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/main/test/java</unitTestSourceDirectory>
        <unitTest>
            <resources>
                <resource>
                    <directory>${basedir}/main/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/main/src/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <excludes>
                    <exclude>**/*.xml</exclude>
                    <exclude>**/*.cer</exclude>
                    <exclude>**/*Keystore</exclude>
                    <exclude>**/*.groovy</exclude>
                    <exclude>**/log4j.properties</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>
