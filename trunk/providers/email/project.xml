<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>mule-email-provider</artifactId>
    <name>Mule Email Provider</name>
    <groupId>mule</groupId>
    <description>A Mule provider for Email Connectivity. This Provider supplies a Pop3 connector, Smtp connector and a
        Mail connector which is an aggregation of the two. for more information see the
        <a href="http://wiki.muleumo.org/display/MULE/Providers+Guide">Providers Guide</a>.
    </description>
    <shortDescription>email</shortDescription>
    <url>http://www.muleumo.org/doc/providers/email/</url>
    <siteDirectory>/home/http/cubis.co.uk/html/mule/reference/providers/email/</siteDirectory>
    <dependencies>
        <dependency>
            <groupId>javamail</groupId>
            <artifactId>javamail</artifactId>
            <version>1.3</version>
            <url>http://java.sun.com/products/javamail/</url>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>activation</groupId>
            <artifactId>activation</artifactId>
            <version>1.0.1</version>
        </dependency>
    </dependencies>
</project>
