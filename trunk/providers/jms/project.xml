<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>mule-jms-provider</artifactId>
    <name>Mule Jms Provider</name>
    <description>A Mule provider for Jms Connectivity. for more information see the
        <a href="http://wiki.muleumo.org/display/MULE/Providers+Guide">Providers Guide</a>.
    </description>
    <shortDescription>jms</shortDescription>
    <url>http://www.muleumo.org/doc/providers/jms/</url>
    <dependencies>
        <dependency>
            <groupId>fscontext</groupId>
            <artifactId>fscontext</artifactId>
            <jar>fscontext.jar</jar>
            <url></url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>providerutil</groupId>
            <artifactId>providerutil</artifactId>
            <version></version>
            <jar>providerutil.jar</jar>
            <url></url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <artifactId>activemq</artifactId>
            <groupId>activemq</groupId>
            <version>2.0</version>
            <properties>
                <ignore>true</ignore>
            </properties>
        </dependency>
    </dependencies>
     <unitTest>
            <excludes>
                <exclude>**/Abstract*.*</exclude>
                <!-- need to have a Jms server running to include these -->
<!--                <exclude>**/*Jms*.*</exclude>-->
<!--                <exclude>**/*JMS*.*</exclude>-->
<!--                <exclude>**/ActiveMQ*.*</exclude>-->
                <exclude>**/OpenJms*.*</exclude>
                <exclude>**/Joram*.*</exclude>
                <exclude>**/SpiritWave*.*</exclude>

                <!-- Active MQ rollback seems a little off need to investigate -->
                <exclude>**/ActiveMQJmsXaTransactionFunctionalTestCase.*</exclude>
            </excludes>
        </unitTest>
</project>
