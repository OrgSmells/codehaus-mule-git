<?xml version="1.0" encoding="UTF-8"?>

<process-definition name="sendMessageProcess">

  <description>Generates a simple Mule event.</description>

  <start-state name="start">
    <transition to="sendMessage">
    </transition>
  </start-state>

  <state name="sendMessage">
      <event type="node-enter">
        <action class="org.mule.providers.bpm.actions.SendMuleEvent">
            <url>file:///tmp</url>
            <payload>This is a text message.</payload>
        </action>
    </event>
    <transition to="end"/>
  </state>

  <end-state name="end" />

</process-definition>
