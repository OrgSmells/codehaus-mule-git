<project>
 <modelVersion>4.0.0</modelVersion>
   <groupId>com.newarchetype</groupId>
   <artifactId>test</artifactId>
   <packaging>jbi-component</packaging>
    <name>Crap JBI Component</name>
   <version>1.0-SNAPSHOT</version>
  <description>Crap JBI Component </description>
  <dependencies>
     <dependency>
               <groupId>com.newarchetype</groupId>
               <artifactId>test-rt</artifactId>
               <version>1.0-SNAPSHOT</version>
     </dependency>
     <dependency>
           <groupId>com.newarchetype</groupId>
           <artifactId>test-boot</artifactId>
           <version>1.0-SNAPSHOT</version>
     </dependency>
     
  </dependencies>
  <modules>
      <module>runtime</module>
      <module>boot</module>
  </modules>
  
  <build>
          <plugins>
              <plugin>
                  <groupId>com.javaforge.bobber</groupId>
                  <artifactId>maven-plugin-jbi</artifactId>
                  <version>1.0-SNAPSHOT</version>
                  <extensions>true</extensions>
                  <configuration>
                    <ComponentModule>
		       <groupId>com.newarchetype</groupId>
		       <artifactId>test-rt</artifactId>
		       <path>/lib/test-rt.jar</path>
	            </ComponentModule>
                     <BootModule>
		       <groupId>com.newarchetype</groupId>
		       <artifactId>test-boot</artifactId>
		       <path>/lib/test-boot.jar</path>
	            </BootModule>
                  </configuration>
              </plugin>
          </plugins>
  </build>

  
</project>
