<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.codehaus.mule</groupId>
		<artifactId>mule-distributions</artifactId>
		<relativePath>../pom.xml</relativePath>
		<version>2.0-SNAPSHOT</version>
	</parent>
    <artifactId>mini-mule</artifactId>
    <packaging>jar</packaging>
    <name>Mule Distribution: Mini</name>
    <description>A light-weight mini distribution of Mule that includes the core plus any providers that do not have other dependencies, such as vm, tcp, udp, multicst, file, jms, stream, servlet, ssl and the Mule client</description>

    <build>
    	<plugins>
      	   <plugin>
             <groupId>org.codehaus.mojo</groupId>
             <artifactId>dependency-maven-plugin</artifactId>
             <executions>
               <execution>
        	 <id>unpack</id>
        	 <phase>compile</phase>
        	 <goals>
        	   <goal>unpack</goal>
        	 </goals>
        	 <configuration>
        	   <outputDirectory>${project.build.outputDirectory}</outputDirectory>

		    <artifactItems>
		    	<!-- Mule Core -->
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-core</artifactId>
        		    <version>${version}</version>
        		</artifactItem>

		    	<!-- Mule Providers -->
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-ejb-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-file-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-http-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-jms-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-multicast-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-rmi-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-ssl-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-stream-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-tcp-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-udp-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-vm-provider</artifactId>
        		    <version>${version}</version>
        		</artifactItem>

		    	<!-- Mule Extras -->
        		<artifactItem>
        		    <groupId>org.codehaus.mule</groupId>
        		    <artifactId>mule-extras-client</artifactId>
        		    <version>${version}</version>
        		</artifactItem>
		    </artifactItems>
        	 </configuration>
               </execution>
             </executions>
	   </plugin>

      	   <plugin>
	       <artifactId>maven-assembly-plugin</artifactId>
	       <configuration>
	    	       <descriptors>
		       		<descriptor>assembly.xml</descriptor>
	    	       </descriptors>
		       <appendAssemblyId>false</appendAssemblyId>
	       </configuration>
	       <executions>
		 <execution>
		   <phase>package</phase>
		   <goals>
		     <goal>assembly</goal>
		   </goals>
		 </execution>
	       </executions>
       	   </plugin>
    	</plugins>
    </build>
	    	
    <dependencies>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-core</artifactId>
            <version>${version}</version>
        </dependency>

        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-ejb-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-file-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-http-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-jms-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-multicast-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-rmi-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-ssl-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-stream-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-tcp-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-udp-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-vm-provider</artifactId>
            <version>${version}</version>
        </dependency>

        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-extras-client</artifactId>
            <version>${version}</version>
        </dependency>
    </dependencies>
</project>
