<plugin>
   <extension-point id="org.mule.ide.prototype.palette.paletteEntries" name="paletteFolder" schema="schema/org.mule.ide.prototype.palette.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Mule IDE"
            id="org.mule.ide.prototype.palette">
      </category>
      <view
            name="Mule Component Palette"
            icon="icons/mule16.GIF"
            category="org.mule.ide.prototype.palette"
            class="org.mule.ide.prototype.palette.views.ToolPalette"
            id="org.mule.ide.prototype.palette.views.ToolPalette">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.mule.ide.prototype.palette.views.Tool Palette">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.mule.ide.prototype.palette.paletteEntries">
         <folder
               folderId="org.mule.ide.prototype.palette.components.Application"
               icon="icons/folder.gif"
               name="Application">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Database"
               icon="icons/folder.gif"
               name="Database">
               <component type="connector"
                     className="org.mule.transports.jdbc.JdbcConnector"
                     icon="icons/component.gif"/>
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Email"
               icon="icons/folder.gif"
               name="Email">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.File"
               icon="icons/folder.gif"
               name="File">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Java"
               icon="icons/folder.gif"
               name="Java">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.JavaSpaces"
               icon="icons/folder.gif"
               name="JavaSpaces">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.JBI"
               icon="icons/folder.gif"
               name="JBI">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Messaging"
               icon="icons/folder.gif"
               name="Messaging">
               <component type="connector"
                     className="org.mule.transports.jms.JmsConnector"
                     icon="icons/component.gif"/>
               <component type="filter"
                     className="org.mule.transports.jms.filter.JmsSelectorFilter"
                     icon="icons/component.gif"/>
               <component type="transformer"
                     className="org.mule.transports.jms.transformer.JmsMessageToObject"
                     icon="icons/component.gif"/>
               <component type="transformer"
                     className="org.mule.transports.jms.transformer.ObjectToJmsMessage"
                     icon="icons/component.gif"/>
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Network"
               icon="icons/folder.gif"
               name="Network">
               <component type="connector"
                     className="org.mule.transports.multicast.MulticastConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.tcp.TcpConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.udp.UdpConnector"
                     icon="icons/component.gif"/>
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.RMI"
               icon="icons/folder.gif"
               name="RMI">
               <component
                     className="org.mule.transports.rmi.RmiConnector"
                     icon="icons/component.gif"/>
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Scheduling"
               icon="icons/folder.gif"
               name="Scheduling">
               <component type="connector"
                     className="org.mule.transports.quartz.QuartzConnector"
                     icon="icons/component.gif"/>
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.SSL"
               icon="icons/folder.gif"
               name="SSL">
         </folder>
         <folder
               folderId="org.mule.ide.prototype.palette.components.Web"
               icon="icons/folder.gif"
               name="Web">
            <folder
                  folderId="org.mule.ide.prototype.palette.components.HTTP"
                  icon="icons/sample.gif"
                  name="HTTP">
               <component type="connector"
                     className="org.mule.transports.http.HttpConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.http.HttpsConnector"
                     icon="icons/component.gif"/>
            </folder>
            <folder
                  folderId="org.mule.ide.prototype.palette.components.J2EE"
                  icon="icons/sample.gif"
                  name="J2EE">
               <component type="connector"
                     className="org.mule.transports.http.jetty.JettyConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.http.servlet.ServletConnector"
                     icon="icons/component.gif"/>
            </folder>
            <folder
                  folderId="org.mule.ide.prototype.palette.components.SOAP"
                  icon="icons/sample.gif"
                  name="SOAP">
               <component type="connector"
                     className="org.mule.transports.soap.axis.AxisConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.soap.axis.wsd.AxisWsdlConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.soap.glue.GlueConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.soap.xfire.XFireConnector"
                     icon="icons/component.gif"/>
               <component type="connector"
                     className="org.mule.transports.soap.xfire.wsdl.XFireConnector"
                     icon="icons/component.gif"/>
            </folder>
      </folder>
   </extension>

</plugin>
