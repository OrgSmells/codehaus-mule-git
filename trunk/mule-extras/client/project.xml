<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <id>mule-extras-client</id>
    <artifactId>mule-extras-client</artifactId>
    <name>Mule Client</name>
    <shortDescription>client</shortDescription>
    <description>MuleClient is a simple interface for Mule clients to send and receive events from local or remote Mule
        Servers. for more information see
        <a href="http://wiki.muleumo.org/display/MULE/Mule+Extras">Mule Extras</a>.
    </description>
    <dependencies>
        <!-- optional: used by the http remoting test case -->
        <dependency>
            <id>commons-httpclient</id>
            <version>2.0.2</version>
            <url>http://jakarta.apache.org/commons/httpclient/index.html</url>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-http-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-vm-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-stream-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-tcp-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>
</project>