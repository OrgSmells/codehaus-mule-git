<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/3.0.0 http://maven.apache.org/maven-v3_0_0.xsd">
    <extend>${basedir}/../project.xml</extend>
    <id>mule-extras-client</id>
    <artifactId>mule-extras-client</artifactId>
    <name>Mule Client</name>
    <shortDescription>client</shortDescription>
    <description>MuleClient is a simple interface for Mule clients to send and receive events from local or remote Mule Servers.
    </description>
    <url>http://www.muleumo.org/docs/modules/mule-extras-client/</url>
    <dependencies>
        <!-- optional: used by the http remoting test case -->
        <dependency>
            <id>commons-httpclient</id>
            <version>${commons_httpclient_version}</version>
            <url>http://jakarta.apache.org/commons/httpclient/index.html</url>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <id>commons-codec</id>
            <version>${commons_codec_version}</version>
            <url>http://jakarta.apache.org/commons/codec/index.html</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-http-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-http-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-vm-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-vm-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-stream-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-stream-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-tcp-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-tcp-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>
</project>
