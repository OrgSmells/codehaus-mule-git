<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <id>mule-extras-acegi</id>
    <artifactId>mule-extras-acegi</artifactId>
    <name>Mule Acegi Security</name>
    <shortDescription>acegi</shortDescription>
    <description>Mule Acegi Support exposes Acegi Authentication providers and Method interceptors to authentication event traffic via endpoints and method level authorisation on components. for more information see
        <a href="http://wiki.muleumo.org/display/MULE/Mule+Security">Mule Security</a>.
    </description>
    <dependencies>
        <!-- optional: used by the http remoting test case -->
        <dependency>
            <artifactId>mule-http-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/http</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-extras-client</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/http</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-extras-spring</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/http</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <artifactId>commons-httpclient</artifactId>
            <groupId>commons-httpclient</groupId>
            <version>${commons_httpclient_version}</version>
            <url>http://jakarta.apache.org/commons/httpclient/index.html</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            </properties>
        </dependency>
        <dependency>
            <artifactId>acegi-security</artifactId>
            <groupId>acegisecurity</groupId>
            <version>${acegisecurity_version}</version>
            <url>http://acegi.sourceforge.net</url>
        </dependency>
        <dependency>
            <artifactId>aopalliance</artifactId>
            <groupId>aopalliance</groupId>
            <version>${aopalliance_version}</version>
        </dependency>
        <dependency>
            <artifactId>aspectjrt</artifactId>
            <groupId>aspectj</groupId>
            <version>${aspectjrt_version}</version>
        </dependency>
        <dependency>
            <artifactId>commons-attributes-api</artifactId>
            <groupId>commons-attributes</groupId>
            <version>${commons_attributes_version}</version>
        </dependency>
       <dependency>
            <artifactId>commons-codec</artifactId>
            <groupId>commons-codec</groupId>
            <version>${commons_codec_version}</version>
        </dependency>
        <dependency>
            <artifactId>ehcache</artifactId>
            <groupId>ehcache</groupId>
            <version>${ehcache_version}</version>
        </dependency>
        <dependency>
            <artifactId>spring</artifactId>
            <groupId>springframework</groupId>
            <version>${spring_version}</version>
        </dependency>
        <dependency>
            <artifactId>oro</artifactId>
            <groupId>oro</groupId>
            <version>${oro_version}</version>
        </dependency>
    </dependencies>
    <build>
        <unitTestSourceDirectory>${basedir}/src/test/java</unitTestSourceDirectory>
    </build>
</project>