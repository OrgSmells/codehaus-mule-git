<!--
Assembly descriptor for the YourKit Profiler distribution.
-->
<assembly>
  <id>yjp</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
    </fileSet>

    <!-- Make binary directories executable. -->
    <fileSet>
      <directory>src/main/resources/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/sbin</directory>
      <outputDirectory>sbin</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>

  </fileSets>
    

    <!--
    ============================
        Libraries
    ============================
    -->

  <dependencySets>

    <!-- Non-Mule libraries -->
    <!-- TODO: uncomment when yjp-controller-api is added to repository
    <dependencySet>
      <outputDirectory>lib/opt</outputDirectory>
      <outputFileNameMapping>${artifactId}.${extension}</outputFileNameMapping>
      <includes>
        <include>com.yourkit:yjp-controller-api-redist</include>
      </includes>
    </dependencySet>
       -->
  </dependencySets>

</assembly>
