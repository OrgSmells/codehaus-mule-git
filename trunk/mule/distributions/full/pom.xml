<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule</groupId>
        <artifactId>mule-distributions</artifactId>
        <relativePath>../pom.xml</relativePath>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <artifactId>mule</artifactId>
    <packaging>jar</packaging>
    <name>Full Distribution</name>
    <description>Includes the Mule server with all its providers and extras.</description>

    <build>
        <plugins>
            <!--
            The dependency plugin builds the composite Mule jar.  Note that it would
            be better to use the "unpack-dependencies" goal instead of explicitly listing
            each module, but there is currently no way to specify an includes/excludes
            list and we don't want all the transitive dependencies included in the Mule jar.
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>dependency-maven-plugin</artifactId>
                <executions>
                       <!--
                       The dependencies get unpacked into the ${project.build.outputDirectory}
                       (i.e., "target/classes") just as if they had been compiled.  This way they
                       get automatically packaged into a jar.
                       -->
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                            <artifactItems>
                                <!-- Mule Core -->
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-core</artifactId>
                                    <version>${version}</version>
                                </artifactItem>

                                <!-- Mule Providers -->
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-axis-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-dq-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-ejb-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-email-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-file-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-ftp-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-glue-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-http-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-jbi-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-jdbc-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-jms-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-multicast-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-oracle-jms-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-quartz-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-rmi-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-soap-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-ssl-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-stream-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-tcp-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-udp-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-vm-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-xfire-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-xmpp-provider</artifactId>
                                    <version>${version}</version>
                                </artifactItem>

                                <!-- Mule Extras -->
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-acegi</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-client</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-hivemind</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-jotm</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-pgp</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-picocontainer</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-plexus</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                <!--
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-extras-pxe</artifactId>
                                    <version>${version}</version>
                                </artifactItem>
                                -->
                                <artifactItem>
                                        <groupId>org.mule</groupId>
                                        <artifactId>mule-extras-spring</artifactId>
                                        <version>${version}</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!--
            For some reason the presence of the assembly plugin postpones the installation
            of the composite jar until too late in the build lifecycle and the other modules
            which depend on it end up halting.  Hopefully this will get resolved in a later
            version of Maven.  For the time being, the following workaround forces the
            composite jar to be installed earlier in the build lifecycle.
            -->
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>install</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--
            The assembly plugin creates the mule-XXX.tar.gz and mule-XXX.zip binary
            distributions based on the configuration in assembly.xml
            -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>assembly</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

