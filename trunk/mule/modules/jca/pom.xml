<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule.modules</groupId>
        <artifactId>mule-modules</artifactId>
        <version>1.4.1-SNAPSHOT</version>
    </parent>
    <artifactId>mule-module-jca-parent</artifactId>
    <name>JCA Resource Adapter Parent</name>
    <packaging>pom</packaging>
    <description>Sources and resources for a Resource Adapter</description>

    <!--
        This module does not produce any artifact, is has packaging=pom

        Instead, this pom serves as parent for application server specific
        jca modules which are children of this module although everything
        is still managed from the pom which resides in the modules directory.

        The sources and resources that reside in src are referenced by the
        child modules. This is intended since
            a) modules with packaging=pom cannot produce any artifacts except
               for the pom which is installed into the repo
            b) a packaged jar would be useless for the child modules which may
               need to add own sources/resources
    -->
    <dependencies>
        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-module-client</artifactId>
            <version>${version}</version>
            <optional/>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-ssl</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-udp</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-multicast</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-jms</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-ejb</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-email</artifactId>
            <version>${version}</version>
        </dependency>
    </dependencies>
</project>
